    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const sidebar = document.getElementById('sidebar');
            const scrim = document.getElementById('scrim');
            const btnMenu = document.getElementById('btnMenu');
            const btnClose = document.getElementById('btnClose');

            function openSidebar() {
                sidebar.classList.add('open');
                scrim.classList.add('show');
                document.body.style.overflow = 'hidden';
            }

            function closeSidebar() {
                sidebar.classList.remove('open');
                scrim.classList.remove('show');
                document.body.style.overflow = '';
            }

            btnMenu.addEventListener('click', openSidebar);
            btnClose.addEventListener('click', closeSidebar);
            scrim.addEventListener('click', closeSidebar);

            // Close sidebar when clicking on a nav link (mobile)
            document.querySelectorAll('.nav-admin a').forEach(link => {
                link.addEventListener('click', closeSidebar);
            });

            // Close sidebar with Escape key
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    closeSidebar();
                }
            });

            // Chat Bot functionality
            const chatBtn = document.getElementById('sg-chat-btn');
            const chatBox = document.getElementById('sg-chat-box');
            const chatClose = document.getElementById('sg-chat-close');
            const chatMessages = document.getElementById('sg-chat-messages');
            const chatInput = document.getElementById('sg-chat-text');
            const chatSend = document.getElementById('sg-chat-send');

            function toggleChat(show) {
                chatBox.style.display = show ? 'flex' : (chatBox.style.display === 'flex' ? 'none' : 'flex');
            }

            chatBtn.addEventListener('click', () => toggleChat(true));
            chatClose.addEventListener('click', () => toggleChat(false));

            function appendMessage(text, cls) {
                const div = document.createElement('div');
                div.className = cls;
                div.textContent = text;
                chatMessages.appendChild(div);
                chatMessages.scrollTop = chatMessages.scrollHeight;
            }

            async function sendMessage() {
                const text = chatInput.value.trim();
                if (!text) return;

                appendMessage(text, 'sg-msg-user');
                chatInput.value = '';

                const loading = document.createElement('div');
                loading.className = 'sg-msg-bot';
                loading.textContent = 'Escribiendo...';
                chatMessages.appendChild(loading);
                chatMessages.scrollTop = chatMessages.scrollHeight;

                try {
                    const res = await fetch('/api/ChatApi', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ message: text })
                    });

                    const data = await res.json();
                    loading.remove();
                    appendMessage(data.reply || 'No pude responder ahora ðŸ˜…', 'sg-msg-bot');
                } catch (err) {
                    loading.remove();
                    appendMessage('OcurriÃ³ un error hablando con el asistente.', 'sg-msg-bot');
                }
            }

            chatSend.addEventListener('click', sendMessage);
            chatInput.addEventListener('keydown', e => {
                if (e.key === 'Enter') sendMessage();
            });

            // Close chat with Escape key
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape' && chatBox.style.display === 'flex') {
                    toggleChat(false);
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
