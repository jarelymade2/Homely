    }

    /* Topbar - CON PADDING CORRECTO Y COLOR COMO EL INICIO */
    .topbar{
        height:70px; 
        background: rgba(36, 48, 54, 0.95);
        backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(127, 161, 116, 0.2);
        display:flex; 
        align-items:center; 
        padding: 0 20px; 
        position:sticky; 
        top:0; 
        z-index:1031;
        transition: var(--transition);
    }
    .brand{
        display:flex; 
        align-items:center; 
        gap:.75rem; 
        font-weight:700; 
        letter-spacing:1px; 
        color: var(--sage-500);
        text-decoration: none;
        transition: var(--transition);
        font-size: 1.5rem;
    }
    .brand:hover {
        color: var(--sage-400);
    }
    .brand .logo{
        width:42px;
        height:42px;
        border-radius:12px;
        background:linear-gradient(135deg, var(--sage-500), var(--sage-700));
        display:grid;
        place-items:center;
        color:#fff;
        box-shadow: 0 4px 12px rgba(127, 161, 116, 0.3);
        transition: var(--transition);
    }
    .brand:hover .logo {
        transform: rotate(5deg) scale(1.05);
    }
    .btn-burger{
        border: 1px solid rgba(127, 161, 116, 0.3); 
        background: transparent; 
        border-radius:10px;
        padding: 8px 12px;
        transition:var(--transition);
        color: var(--sage-500);
        font-size: 1.25rem;
    }
    .btn-burger:hover{
        background:rgba(127, 161, 116, 0.1); 
        border-color: var(--sage-500);
        transform: translateY(-1px);
        color: var(--sage-400);
    }

    /* Sidebar - CON COLOR COMO EL INICIO */
    .sidebar{
        position:fixed; 
        inset:0 auto 0 0; 
        width:280px;
        background: rgba(36, 48, 54, 0.98);
        backdrop-filter: blur(10px);
        color:#dfe7e3; 
        transform:translateX(-100%); 
        transition:transform .3s ease; 
        z-index:1040;
        box-shadow: 6px 0 24px rgba(0,0,0,.25);
        border-right: 1px solid rgba(127, 161, 116, 0.2);
    }
    .sidebar.open{ transform:translateX(0);}
    .side-head{
        height:70px; 
        display:flex; 
        align-items:center; 
        justify-content:space-between; 
        padding:0 20px; 
        border-bottom:1px solid rgba(127, 161, 116, 0.2);
    }
    .side-title{
        display:flex; 
        align-items:center; 
        gap:.75rem; 
        font-weight:700; 
        color: var(--sage-500);
        font-family: 'Inter', sans-serif  };
    }
    .side-title .logo{
        width:36px;
        height:36px;
        border-radius:10px; 
        display:grid; 
        place-items:center; 
        color:#fff;
        background:linear-gradient(135deg, var(--sage-500), var(--sage-700));
        box-shadow: 0 4px 12px rgba(127, 161, 116, 0.3);
    }
    .side-close{
        background:transparent; 
        border:none; 
        color: var(--sage-500); 
        font-size:20px; 
        padding:6px 12px; 
        border-radius:10px;
        transition: var(--transition);
    }
    .side-close:hover{
        background:rgba(127, 161, 116, 0.1);
        transform: translateX(-2px);
        color: var(--sage-400);
    }
    .nav-admin{
        padding: 20px;
    }
