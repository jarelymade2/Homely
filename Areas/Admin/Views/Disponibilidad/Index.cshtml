@model StayGo.Models.Propiedad
@{
    ViewData["Title"] = "Disponibilidad de " + Model.Titulo;
    var disponibilidades = Model.Disponibilidades.OrderBy(d => d.Desde).ToList();
}

<div class="page-head d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="h4 m-0">@ViewData["Title"]</h2>
        <a asp-controller="Propiedad" asp-action="Detalles" asp-route-id="@Model.Id" class="text-muted small">
            <i class="bi bi-arrow-left"></i> Volver a la Propiedad
        </a>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-4">
        
        <div class="card card-soft mb-4">
            <div class="card-body">
                <h5 class="card-title">Agregar Rango</h5>
                <form asp-action="Crear" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="PropiedadId" value="@Model.Id" />
                    <div class="mb-2">
                        <label class="form-label small">Inicio</label>
                        <input name="Desde" class="form-control" type="date" required value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label small">Fin</label>
                        <input name="Hasta" class="form-control" type="date" required value="@DateTime.Now.AddDays(7).ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Agregar</button>
                    </div>
                </form>
            </div>
        </div>

        <h5>Periodos Activos</h5>
        @if (disponibilidades.Any())
        {
            <ul class="list-group">
                @foreach (var item in disponibilidades)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>@item.Desde.ToString("dd/MM/yy")</strong> al <strong>@item.Hasta.ToString("dd/MM/yy")</strong>
                        </div>
                        <a asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Eliminar">
                           <i class="bi bi-trash"></i>
                        </a>
                    </li>
                }
            </ul>
        }
        else
        {
            <div class="alert alert-info">No hay periodos definidos.</div>
        }
    </div>

    <div class="col-lg-8">
        <div class="card card-soft p-3">
            <div id="calendar"></div>
        </div>
    </div>
</div>


@section Scripts {
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.9/index.global.min.js'></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var calendarEl = document.getElementById('calendar');
            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth', // Vista mensual por defecto
                locale: 'es', // Poner el calendario en español
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek'
                },
                // 3. Aquí le decimos al calendario dónde buscar los eventos
                events: '/Admin/Disponibilidad/GetDisponibilidadesJson?propiedadId=@Model.Id',
                
                // Estilo visual de los eventos
                eventDisplay: 'block',
                
                // Muestra un indicador de carga mientras se obtienen los datos
                loading: function(isLoading) {
                    if (isLoading) {
                        // Puedes mostrar un spinner o un mensaje de carga aquí
                    } else {
                        // Ocultar el spinner
                    }
                }
            });
            calendar.render();
        });
    </script>
}