@model IEnumerable<StayGo.Models.Propiedad>
@using StayGo.Models.Enums

@{
    ViewData["Title"] = "Gestión de Propiedades";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Header Elegante -->
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="h3 mb-2" style="color: #1a1a1a; font-weight: 700; font-family: 'Inter', sans-serif;">Gestión de Propiedades</h1>
            <p class="text-muted mb-0" style="font-family: 'Inter', sans-serif; font-size: 0.95rem;">Administra y supervisa todos los alojamientos de la plataforma</p>
        </div>
        <div class="d-flex align-items-center gap-3">
            <span class="badge bg-light text-dark border px-3 py-2">
                <i class="bi bi-house me-2"></i>Total: @(Model?.Count() ?? 0)
            </span>
            <a asp-area="Admin" asp-controller="Propiedad" asp-action="Crear" class="btn btn-primary-custom d-flex align-items-center gap-2 px-4">
                <i class="bi bi-plus-lg"></i>
                <span>Nueva Propiedad</span>
            </a>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <!-- Estado Vacío Mejorado -->
        <div class="empty-state text-center py-6">
            <div class="empty-icon mb-4">
                <i class="bi bi-house-x" style="font-size: 4rem; color: #94a3b8;"></i>
            </div>
            <h3 style="color: #1a1a1a; margin-bottom: 0.5rem; font-weight: 600;">No hay propiedades registradas</h3>
            <p class="text-muted mb-4" style="max-width: 400px; margin: 0 auto;">Comienza creando tu primera propiedad para ofrecer alojamientos en la plataforma.</p>
            <a asp-area="Admin" asp-controller="Propiedad" asp-action="Crear" class="btn btn-primary-custom d-flex align-items-center gap-2 px-4 mx-auto" style="width: fit-content;">
                <i class="bi bi-house-add"></i>
                <span>Crear Primera Propiedad</span>
            </a>
        </div>
    }
    else
    {
        <!-- Panel Principal -->
        <div class="main-card">
            <!-- Header del Panel -->
            <div class="card-header-custom">
                <div class="d-flex justify-content-between align-items-center flex-wrap gap-4">
                    <div>
                        <h2 style="color: #1a1a1a; font-weight: 600; margin-bottom: 0.25rem;">Lista de Propiedades</h2>
                        <p class="text-muted mb-0" style="font-size: 0.9rem;">Gestiona precios, disponibilidad y detalles de los alojamientos</p>
                    </div>
                    <div class="d-flex align-items-center gap-3 flex-wrap">
                        <div class="search-box">
                            <i class="bi bi-search"></i>
                            <input type="text" placeholder="Buscar propiedades..." id="searchInput">
                        </div>
                        <select class="filter-select" id="tipoFilter">
                            <option value="">Todos los tipos</option>
                            @if (Model != null && Model.Any())
                            {
                                var tiposUnicos = Model
                                    .Where(p => p?.Tipo != null)
                                    .Select(p => p.Tipo.ToString())
                                    .Distinct()
                                    .OrderBy(t => t);
                                
                                foreach (var tipo in tiposUnicos)
                                {
                                    <option value="@tipo">@tipo</option>
                                }
                            }
                        </select>
                    </div>
                </div>
            </div>

            <!-- Tabla de Propiedades -->
            <div class="table-container">
                <table class="modern-table" id="propiedadesTable">
                    <thead>
                        <tr>
                            <th style="width: 100px;">
                                <div class="table-header-content">
                                    <span>Imagen</span>
                                </div>
                            </th>
                            <th>
                                <div class="table-header-content">
                                    <span>Propiedad</span>
                                    <i class="bi bi-arrow-down-up"></i>
                                </div>
                            </th>
                            <th>
                                <div class="table-header-content">
                                    <span>Ubicación</span>
                                </div>
                            </th>
                            <th>
                                <div class="table-header-content">
                                    <span>Tipo</span>
                                </div>
                            </th>
                            <th>
                                <div class="table-header-content">
                                    <span>Precio/Noche</span>
                                </div>
                            </th>
                            <th>
                                <div class="table-header-content">
                                    <span>Capacidad</span>
                                </div>
                            </th>
                            <th style="width: 280px;">
                                <div class="table-header-content">
                                    <span>Acciones</span>
                                </div>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model)
                        {
                            var img = p.Imagenes?
                                .OrderByDescending(i => i.EsPrincipal)
                                .FirstOrDefault()?.Url
                                ?? "https://placehold.co/400x300?text=Sin+Imagen&font=inter";

                            <tr data-tipo="@p.Tipo">
                                <!-- Columna Imagen -->
                                <td>
                                    <div class="property-image">
                                        <img src="@img" alt="@p.Titulo" class="property-thumb" />
                                        @if (p.Imagenes?.Any(i => i.EsPrincipal) == true)
                                        {
                                            <div class="image-badge">Principal</div>
                                        }
                                    </div>
                                </td>
                                
                                <!-- Columna Información -->
                                <td>
                                    <div class="property-info">
                                        <div class="property-title">@p.Titulo</div>
                                        <div class="property-meta">
                                            @if (p.PrecioPorNoche.HasValue)
                                            {
                                                <div class="price-preview">S/ @p.PrecioPorNoche.Value.ToString("0")</div>
                                            }
                                            <div class="capacity-preview">
                                                <i class="bi bi-people"></i>
                                                <span>@p.Capacidad</span>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                
                                <!-- Columna Ubicación -->
                                <td>
                                    <div class="location-info">
                                        <div class="location-city">@(p.Direccion?.Ciudad ?? "—")</div>
                                        <div class="location-country">@(p.Direccion?.Pais ?? "—")</div>
                                    </div>
                                </td>
                                
                                <!-- Columna Tipo -->
                                <td>
                                    <div class="type-badge @p.Tipo.ToString().ToLower()">
                                        @p.Tipo
                                    </div>
                                </td>
                                
                                <!-- Columna Precio -->
                                <td>
                                    <div class="price-display">
                                        @if (p.PrecioPorNoche.HasValue)
                                        {
                                            <div class="price-amount">S/ @p.PrecioPorNoche.Value.ToString("0.##")</div>
                                            <div class="price-period">por noche</div>
                                        }
                                        else
                                        {
                                            <div class="price-unavailable">No definido</div>
                                        }
                                    </div>
                                </td>
                                
                                <!-- Columna Capacidad -->
                                <td>
                                    <div class="capacity-display">
                                        <div class="capacity-number">@p.Capacidad</div>
                                        <div class="capacity-label">huéspedes</div>
                                    </div>
                                </td>
                                
                                <!-- Columna Acciones -->
                                <td>
                                    <div class="action-buttons">
                                        <a asp-area="Admin" asp-controller="Propiedad" asp-action="Detalles" asp-route-id="@p.Id"
                                           class="btn-action btn-view" title="Ver detalles">
                                            <i class="bi bi-eye"></i>
                                            <span>Ver</span>
                                        </a>
                                        <a asp-area="Admin" asp-controller="Propiedad" asp-action="Editar" asp-route-id="@p.Id"
                                           class="btn-action btn-edit" title="Editar propiedad">
                                            <i class="bi bi-pencil"></i>
                                            <span>Editar</span>
                                        </a>
                                        <a asp-area="Admin" asp-controller="ImagenPropiedad" asp-action="Index" asp-route-propiedadId="@p.Id"
                                           class="btn-action btn-images" title="Gestionar imágenes">
                                            <i class="bi bi-images"></i>
                                            <span>Imágenes</span>
                                        </a>
                                        <form asp-area="Admin" asp-controller="Propiedad" asp-action="Eliminar" method="post" 
                                              onsubmit="return confirm('¿Estás seguro de que deseas eliminar esta propiedad? Esta acción no se puede deshacer.');"
                                              class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@p.Id" />
                                            <button type="submit" class="btn-action btn-delete" title="Eliminar propiedad">
                                                <i class="bi bi-trash"></i>
                                                <span>Eliminar</span>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Footer del Panel -->
            <div class="card-footer-custom">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="table-info">
                        <span>Mostrando @Model.Count() propiedades</span>
                    </div>
                    <div class="table-pagination">
                        <button class="pagination-btn disabled">
                            <i class="bi bi-chevron-left"></i>
                        </button>
                        <span class="pagination-text">Página 1 de 1</span>
                        <button class="pagination-btn disabled">
                            <i class="bi bi-chevron-right"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    /* Variables de diseño - Agregar más tonos de verde */
    :root {
        --primary: #7fa174;
        --primary-dark: #6d8a63;
        --primary-light: #a8c19a;
        --primary-50: #f7f9f6;
        --primary-100: #e8efe5;
        --primary-200: #d4e2cd;
        --success: #10b981;
        --warning: #f59e0b;
        --error: #ef4444;
        --info: #3b82f6;
        --background: #ffffff;
        --surface: #f8fafc;
        --border: #e2e8f0;
        --text-primary: #1a1a1a;
        --text-secondary: #64748b;
        --text-muted: #94a3b8;
        --shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
        --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
        --radius: 12px;
        --radius-lg: 16px;
    }

    /* Botón Principal */
    .btn-primary-custom {
        background: linear-gradient(135deg, var(--primary), var(--primary-dark));
        border: none;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: var(--radius);
        font-weight: 600;
        font-size: 0.9rem;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: var(--shadow);
        text-decoration: none;
        display: inline-flex;
        align-items: center;
    }

    .btn-primary-custom:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-lg);
        color: white;
    }

    /* Estado Vacío */
    .empty-state {
        background: var(--surface);
        border: 1px solid var(--border);
        border-radius: var(--radius-lg);
        padding: 4rem 2rem;
    }

    .empty-icon {
        opacity: 0.5;
    }

    /* Panel Principal */
    .main-card {
        background: var(--background);
        border: 1px solid var(--border);
        border-radius: var(--radius-lg);
        overflow: hidden;
        box-shadow: var(--shadow);
    }

    /* Header con fondo verde sutil */
    .card-header-custom {
        padding: 1.5rem 2rem;
        border-bottom: 1px solid var(--primary-200);
        background: linear-gradient(135deg, var(--primary-50), var(--primary-100));
        position: relative;
    }

    .card-header-custom::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, var(--primary), var(--primary-dark));
    }

    /* Footer con toque verde */
    .card-footer-custom {
        padding: 1.25rem 2rem;
        border-top: 1px solid var(--primary-200);
        background: linear-gradient(135deg, var(--primary-50), var(--primary-100));
    }

    /* Búsqueda y Filtros con acento verde */
    .search-box {
        position: relative;
        min-width: 280px;
    }

    .search-box i {
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: var(--primary);
    }

    .search-box input {
        width: 100%;
        padding: 0.75rem 1rem 0.75rem 2.5rem;
        border: 1px solid var(--primary-200);
        border-radius: var(--radius);
        background: var(--background);
        font-size: 0.9rem;
        transition: all 0.2s;
        color: var(--text-primary);
    }

    .search-box input:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 3px rgba(127, 161, 116, 0.15);
        background: var(--primary-50);
    }

    .filter-select {
        padding: 0.75rem 1rem;
        border: 1px solid var(--primary-200);
        border-radius: var(--radius);
        background: var(--background);
        font-size: 0.9rem;
        color: var(--text-primary);
        min-width: 140px;
        transition: all 0.2s;
    }

    .filter-select:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 3px rgba(127, 161, 116, 0.15);
        background: var(--primary-50);
    }

    /* Tabla con toques verdes */
    .table-container {
        overflow: hidden;
    }

    .modern-table {
        width: 100%;
        border-collapse: collapse;
    }

    .modern-table thead {
        background: linear-gradient(135deg, var(--primary-50), var(--primary-100));
    }

    .modern-table th {
        padding: 1rem 1.5rem;
        text-align: left;
        font-weight: 600;
        font-size: 0.8rem;
        color: var(--primary-dark);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        border-bottom: 2px solid var(--primary-200);
    }

    .table-header-content {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .modern-table td {
        padding: 1.25rem 1.5rem;
        border-bottom: 1px solid var(--border);
        transition: background-color 0.2s;
    }

    .modern-table tbody tr:hover {
        background: linear-gradient(90deg, rgba(127, 161, 116, 0.03), rgba(127, 161, 116, 0.08));
        border-left: 3px solid var(--primary);
    }

    .modern-table tbody tr:last-child td {
        border-bottom: none;
    }

    /* Imagen de Propiedad */
    .property-image {
        position: relative;
        width: 80px;
        height: 60px;
        border-radius: 8px;
        overflow: hidden;
    }

    .property-thumb {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .property-image:hover .property-thumb {
        transform: scale(1.05);
    }

    .image-badge {
        position: absolute;
        top: 4px;
        right: 4px;
        background: var(--primary);
        color: white;
        padding: 2px 6px;
        border-radius: 4px;
        font-size: 0.7rem;
        font-weight: 500;
    }

    /* Información de Propiedad */
    .property-title {
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
        line-height: 1.3;
    }

    .property-meta {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .price-preview {
        font-weight: 600;
        color: var(--primary-dark);
        font-size: 0.9rem;
    }

    .capacity-preview {
        display: flex;
        align-items: center;
        gap: 0.25rem;
        color: var(--primary-dark);
        font-size: 0.8rem;
        font-weight: 500;
    }

    /* Ubicación */
    .location-city {
        font-weight: 500;
        color: var(--text-primary);
        margin-bottom: 0.125rem;
    }

    .location-country {
        font-size: 0.8rem;
        color: var(--text-secondary);
    }

    /* Badges de Tipo */
    .type-badge {
        padding: 0.5rem 0.75rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        text-align: center;
        border: 1px solid;
        transition: all 0.2s;
    }

    .type-badge.casa {
        background: var(--primary-50);
        border-color: var(--primary-200);
        color: var(--primary-dark);
    }

    .type-badge.departamento {
        background: #eff6ff;
        border-color: #bfdbfe;
        color: #1d4ed8;
    }

    .type-badge.hotel {
        background: #fefce8;
        border-color: #fef08a;
        color: #d97706;
    }

    .type-badge.cabaña {
        background: #fdf4ff;
        border-color: #f0abfc;
        color: #a855f7;
    }

    .type-badge.casa:hover {
        background: var(--primary-100);
        transform: translateY(-1px);
    }

    /* Precios */
    .price-amount {
        font-weight: 700;
        color: var(--primary-dark);
        font-size: 1rem;
    }

    .price-period {
        font-size: 0.8rem;
        color: var(--text-secondary);
    }

    .price-unavailable {
        color: var(--text-muted);
        font-style: italic;
        font-size: 0.9rem;
    }

    /* Capacidad */
    .capacity-display {
        text-align: center;
    }

    .capacity-number {
        font-weight: 700;
        color: var(--text-primary);
        font-size: 1.25rem;
        line-height: 1;
    }

    .capacity-label {
        font-size: 0.75rem;
        color: var(--text-secondary);
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    /* Botones de Acción */
    .action-buttons {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .btn-action {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 0.75rem;
        border: 1px solid var(--primary-200);
        background: var(--background);
        border-radius: 8px;
        color: var(--text-secondary);
        text-decoration: none;
        font-size: 0.8rem;
        font-weight: 500;
        transition: all 0.2s;
        cursor: pointer;
        white-space: nowrap;
    }

    .btn-action:hover {
        transform: translateY(-1px);
        text-decoration: none;
        border-color: var(--primary);
        background: var(--primary-50);
        color: var(--primary-dark);
    }

    .btn-view:hover {
        border-color: var(--info);
        background: #eff6ff;
        color: var(--info);
    }

    .btn-edit:hover {
        border-color: var(--primary);
        background: var(--primary-50);
        color: var(--primary-dark);
    }

    .btn-images:hover {
        border-color: #8b5cf6;
        background: #faf5ff;
        color: #8b5cf6;
    }

    .btn-delete:hover {
        border-color: var(--error);
        background: #fef2f2;
        color: var(--error);
    }

    /* Paginación */
    .table-info {
        color: var(--text-secondary);
        font-size: 0.9rem;
    }

    .table-pagination {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .pagination-btn {
        width: 36px;
        height: 36px;
        border: 1px solid var(--border);
        background: var(--background);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--text-secondary);
        transition: all 0.2s;
        border: none;
    }

    .pagination-btn:not(.disabled):hover {
        border-color: var(--primary);
        background: var(--primary-50);
        color: var(--primary-dark);
    }

    .pagination-btn.disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    .pagination-text {
        color: var(--text-secondary);
        font-size: 0.9rem;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .container-fluid {
            padding: 1rem;
        }
        
        .card-header-custom,
        .card-footer-custom {
            padding: 1rem;
        }
        
        .modern-table th,
        .modern-table td {
            padding: 0.75rem 1rem;
        }
        
        .search-box {
            min-width: 100%;
        }
        
        .action-buttons {
            flex-direction: column;
        }
        
        .btn-action {
            justify-content: center;
        }
    }
</style>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('searchInput');
        const tipoFilter = document.getElementById('tipoFilter');
        const tableRows = document.querySelectorAll('#propiedadesTable tbody tr');

        function filterTable() {
            const searchTerm = searchInput.value.toLowerCase().trim();
            const tipoValue = tipoFilter.value;

            tableRows.forEach(row => {
                const title = row.querySelector('.property-title').textContent.toLowerCase();
                const city = row.querySelector('.location-city').textContent.toLowerCase();
                const country = row.querySelector('.location-country').textContent.toLowerCase();
                const tipoElement = row.querySelector('.type-badge');
                const tipo = tipoElement ? tipoElement.textContent.trim() : '';

                const matchesSearch = searchTerm === '' || 
                                    title.includes(searchTerm) || 
                                    city.includes(searchTerm) || 
                                    country.includes(searchTerm);
                
                const matchesTipo = tipoValue === '' || tipo === tipoValue;

                row.style.display = matchesSearch && matchesTipo ? '' : 'none';
            });
        }

        searchInput.addEventListener('input', filterTable);
        tipoFilter.addEventListener('change', filterTable);
    });
</script>