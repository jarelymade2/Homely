@model IEnumerable<StayGo.Models.Propiedad>

@{
    ViewData["Title"] = "Propiedades (Admin)";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h4">Propiedades</h2>
    <a asp-action="Crear" class="btn btn-primary">+ Crear propiedad</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>TÃ­tulo</th>
                <th>Ciudad</th>
                <th>Precio/Noche</th>
                <th>Capacidad</th>
                <th>Tipo</th>
                <th style="width:120px;" class="text-end">Acciones</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Titulo</td>
                <td>@p.Direccion?.Ciudad</td>
                <td>@(p.PrecioPorNoche.HasValue ? $"S/ {p.PrecioPorNoche:0.##}" : "-")</td>
                <td>@p.Capacidad</td>
                <td>@p.Tipo</td>
                <td class="text-end">
                    <a asp-area="Admin"
                       asp-controller="Propiedad"
                       asp-action="Detalles"
                       asp-route-id="@p.Id"
                       class="btn btn-sm btn-info">
                        Ver
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
