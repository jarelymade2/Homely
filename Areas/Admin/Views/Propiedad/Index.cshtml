@model IEnumerable<StayGo.Models.Propiedad>
@using StayGo.Models.Enums

@{
    ViewData["Title"] = "Propiedades (Admin)";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml"; // si tienes _ViewStart, puedes quitar esta línea
}

<div class="page-head d-flex flex-wrap justify-content-between align-items-center gap-2">
    <div>
        <h2 class="h4 m-0">Propiedades</h2>
        <div class="text-muted small">Administra alojamientos, precios y capacidad.</div>
    </div>
    <div class="d-flex gap-2">
        <a asp-area="Admin" asp-controller="Propiedad" asp-action="Crear" class="btn btn-sage text-white">
            <i class="bi bi-house-add me-1"></i> Nueva propiedad
        </a>
        <a asp-area="Admin" asp-controller="Propiedad" asp-action="Index" class="btn btn-outline-sage">
            <i class="bi bi-arrow-clockwise me-1"></i> Restablecer
        </a>
    </div>
</div>

@if (Model == null || !Model.Any())
{
    <div class="empty text-center">
        <div class="fw-semibold mb-1">No hay propiedades registradas.</div>
        <div class="text-muted mb-2">Crea tu primera propiedad para empezar.</div>
        <a asp-area="Admin" asp-controller="Propiedad" asp-action="Crear" class="btn btn-sage text-white">
            <i class="bi bi-house-add me-1"></i> Crear propiedad
        </a>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover align-middle bg-white rounded-3 overflow-hidden">
            <thead class="table-light">
                <tr>
                    <th style="width:90px;"></th>
                    <th>Título</th>
                    <th>Ubicación</th>
                    <th>Tipo</th>
                    <th class="text-end">Precio/Noche</th>
                    <th class="text-center">Capacidad</th>
                    <th class="text-end" style="width:260px;">Acciones</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var p in Model)
            {
                var img = p.Imagenes?
                    .OrderByDescending(i => i.EsPrincipal)
                    .FirstOrDefault()?.Url
                    ?? "https://placehold.co/96x64?text=Sin+img";

                <tr>
                    <td>
                        <img src="@img" alt="img" class="thumb" />
                    </td>
                    <td class="fw-semibold">@p.Titulo</td>
                    <td class="text-muted">
                        @((p.Direccion?.Ciudad ?? "—") + (string.IsNullOrWhiteSpace(p.Direccion?.Pais) ? "" : ", " + p.Direccion!.Pais))
                    </td>
                    <td>
                        <span class="badge badge-type">@p.Tipo</span>
                    </td>
                    <td class="text-end">
                        @(p.PrecioPorNoche.HasValue ? $"S/ {p.PrecioPorNoche:0.##}" : "—")
                    </td>
                    <td class="text-center">@p.Capacidad</td>
                    <td class="text-end">
                        <div class="d-inline-flex flex-wrap gap-1">
                            <a asp-area="Admin" asp-controller="Propiedad" asp-action="Detalles" asp-route-id="@p.Id"
                               class="btn btn-sm btn-outline-sage">
                                <i class="bi bi-eye"></i> Ver
                            </a>
                            <a asp-area="Admin" asp-controller="Propiedad" asp-action="Editar" asp-route-id="@p.Id"
                               class="btn btn-sm btn-outline-sage">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <a asp-area="Admin" asp-controller="ImagenPropiedad" asp-action="Index" asp-route-propiedadId="@p.Id"
                               class="btn btn-sm btn-outline-sage">
                                <i class="bi bi-images"></i> Imágenes
                            </a>
                            <form asp-area="Admin" asp-controller="Propiedad" asp-action="Eliminar" method="post"
                                  onsubmit="return confirm('¿Eliminar esta propiedad? Esta acción no se puede deshacer.');"
                                  class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@p.Id" />
                                <button class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i> Eliminar
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
