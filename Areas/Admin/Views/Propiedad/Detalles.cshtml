@model StayGo.Models.Propiedad
@{
    ViewData["Title"] = "Detalles de la Propiedad";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
    var principal = Model.Imagenes?.FirstOrDefault(i => i.EsPrincipal) 
                    ?? Model.Imagenes?.FirstOrDefault();
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="h4 mb-0">@Model.Titulo</h2>
        <div class="text-muted">ID: @Model.Id</div>
    </div>
    <div class="d-flex gap-2">
        <a asp-area="Admin" asp-controller="Propiedad" asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-warning">
            Editar
        </a>
        <a asp-area="Admin" asp-controller="Propiedad" asp-action="Index" class="btn btn-secondary">
            Volver
        </a>
    </div>
</div>

<div class="row g-3">
    <div class="col-lg-7">
        @if (principal != null)
        {
            <div class="card">
                <img src="@principal.Url" class="card-img-top" alt="Imagen principal" style="object-fit:cover; max-height:420px;">
                <div class="card-body py-2">
                    <span class="badge bg-primary">Principal</span>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info">Esta propiedad aún no tiene imágenes.</div>
        }

        @if (Model.Imagenes != null && Model.Imagenes.Count > 1)
        {
            <div class="mt-3">
                <div class="d-flex flex-wrap gap-2">
                    @foreach (var img in Model.Imagenes.Where(i => principal == null || i.Id != principal.Id))
                    {
                        <div class="card" style="width: 140px;">
                            <img src="@img.Url" class="card-img-top" alt="Imagen" style="object-fit:cover; height:90px;">
                            <div class="card-body p-2 text-center">
                                @if (img.EsPrincipal)
                                {
                                    <span class="badge bg-primary">Principal</span>
                                }
                                else
                                {
                                    <span class="badge bg-light text-muted">Secundaria</span>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>

    <div class="col-lg-5">
        <div class="card">
            <div class="card-body">
                <h5 class="mb-3">Información</h5>
                <dl class="row mb-0">
                    <dt class="col-sm-5">Tipo</dt>
                    <dd class="col-sm-7">@Model.Tipo</dd>

                    <dt class="col-sm-5">Precio / noche</dt>
                    <dd class="col-sm-7">
                        @(Model.PrecioPorNoche.HasValue ? $"S/ {Model.PrecioPorNoche:0.##}" : "-")
                    </dd>

                    <dt class="col-sm-5">Capacidad</dt>
                    <dd class="col-sm-7">@Model.Capacidad</dd>

                    <dt class="col-sm-5">Lat / Lng</dt>
                    <dd class="col-sm-7">@Model.Lat.ToString("0.######") , @Model.Lng.ToString("0.######")</dd>

                    <dt class="col-sm-5">Descripción</dt>
                    <dd class="col-sm-7">
                        @if (!string.IsNullOrWhiteSpace(Model.Descripcion)) { @Model.Descripcion }
                        else { <span class="text-muted">—</span> }
                    </dd>
                </dl>

                <hr />

                <h6 class="mb-2">Dirección</h6>
                @if (Model.Direccion != null)
                {
                    <div class="small">
                        @Model.Direccion.Linea1<br />
                        @if (!string.IsNullOrWhiteSpace(Model.Direccion.Linea2)) { @Model.Direccion.Linea2<br /> }
                        @Model.Direccion.Ciudad, @Model.Direccion.Pais<br />
                        @if (!string.IsNullOrWhiteSpace(Model.Direccion?.CodigoPostal))
                            {
                                @:Código Postal: @Model.Direccion.CodigoPostal
                            }

                    </div>
                }
                else
                {
                    <div class="text-muted small">Sin dirección registrada.</div>
                }
                @using StayGo.Models.Enums

        @if (Model.Tipo == TipoPropiedad.Hotel)
        {
            <hr class="my-4" />
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h5 class="mb-0">Habitaciones</h5>
                <a asp-area="Admin"
                asp-controller="Habitacion"
                asp-action="Crear"
                asp-route-propiedadId="@Model.Id"
                class="btn btn-primary btn-sm">+ Crear habitación</a>
            </div>

            @if (Model.Habitaciones != null && Model.Habitaciones.Any())
            {
                <div class="table-responsive">
                    <table class="table table-sm table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Nombre</th>
                                <th>Capacidad</th>
                                <th>Precio/Noche</th>
                                <th>Piso</th>
                                <th>Número</th>
                                <th>Tipo cama</th>
                                <th class="text-end" style="width:140px;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var h in Model.Habitaciones.OrderBy(x => x.Piso).ThenBy(x => x.Numero))
                        {
                            <tr>
                                <td>@h.Nombre</td>
                                <td>@h.Capacidad</td>
                                <td>S/ @h.PrecioPorNoche</td>
                                <td>@(h.Piso?.ToString() ?? "—")</td>
                                <td>@(string.IsNullOrWhiteSpace(h.Numero) ? "—" : h.Numero)</td>
                                <td>@(h.TipoCama?.ToString() ?? "—")</td>
                                <td class="text-end">
                                    <a asp-area="Admin" asp-controller="Habitacion" asp-action="Editar"
                                    asp-route-propiedadId="@Model.Id" asp-route-id="@h.Id"
                                    class="btn btn-sm btn-warning">Editar</a>
                                    <a asp-area="Admin" asp-controller="Habitacion" asp-action="Eliminar"
                                    asp-route-propiedadId="@Model.Id" asp-route-id="@h.Id"
                                    class="btn btn-sm btn-danger">Eliminar</a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info mb-0">Este hotel aún no tiene habitaciones registradas.</div>
            }
        }

            </div>
        </div>
    </div>
</div>
