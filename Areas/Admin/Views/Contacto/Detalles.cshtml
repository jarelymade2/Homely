@model StayGo.Models.ContactoMensaje
@{
    ViewData["Title"] = "Detalles del Mensaje";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"]</h1>
        <div>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver a la lista
            </a>
        </div>
    </div>

    <!-- Tarjeta de información del mensaje -->
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="card-title mb-0">
                <i class="fas fa-envelope me-2"></i>Mensaje de @Model.Nombre
            </h5>
        </div>
        <div class="card-body">
            <!-- Información básica -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="info-item">
                        <strong><i class="fas fa-user me-2"></i>Nombre:</strong>
                        <span class="ms-2">@Model.Nombre</span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="info-item">
                        <strong><i class="fas fa-envelope me-2"></i>Email:</strong>
                        <a href="mailto:@Model.Email" class="ms-2">@Model.Email</a>
                    </div>
                </div>
            </div>

            <!-- Fecha y tipo de usuario -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="info-item">
                        <strong><i class="fas fa-calendar me-2"></i>Fecha de envío:</strong>
                        <span class="ms-2">@Model.FechaLocal.ToString("dd/MM/yyyy 'a las' HH:mm")</span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="info-item">
                        <strong><i class="fas fa-user-tag me-2"></i>Tipo de usuario:</strong>
                        <span class="ms-2">
                            @if (!string.IsNullOrEmpty(Model.IdentityUserId))
                            {
                                <span class="badge bg-success">
                                    <i class="fas fa-user-check me-1"></i>Usuario Registrado
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">
                                    <i class="fas fa-user me-1"></i>Visitante
                                </span>
                            }
                        </span>
                    </div>
                </div>
            </div>

            <!-- ID del mensaje (para referencia) -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="info-item">
                        <strong><i class="fas fa-fingerprint me-2"></i>ID del mensaje:</strong>
                        <code class="ms-2 small">@Model.Id</code>
                    </div>
                </div>
            </div>

            <!-- Mensaje completo -->
            <div class="mb-3">
                <strong><i class="fas fa-comment me-2"></i>Mensaje:</strong>
                <div class="border rounded p-3 mt-2 bg-light message-content">
                    @Html.Raw(Model.Mensaje.Replace("\n", "<br/>"))
                </div>
            </div>

            <!-- Información adicional si es usuario registrado -->
            @if (!string.IsNullOrEmpty(Model.IdentityUserId))
            {
                <div class="alert alert-info mt-3">
                    <h6><i class="fas fa-info-circle me-2"></i>Información adicional</h6>
                    <p class="mb-0">
                        Este mensaje fue enviado por un usuario registrado. 
                        ID de usuario: <code>@Model.IdentityUserId</code>
                    </p>
                </div>
            }
        </div>
        
        <!-- Footer con acciones -->
        <div class="card-footer bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <small class="text-muted">
                        Recibido hace @((DateTime.UtcNow - Model.FechaUtc).Days) días
                    </small>
                </div>
                <div class="btn-group">
                    <a href="mailto:@Model.Email?subject=Respuesta a tu mensaje de contacto&body=Hola @Model.Nombre,%0A%0AEn respuesta a tu mensaje:%0A%0A@Uri.EscapeDataString(Model.Mensaje)" 
                       class="btn btn-success">
                        <i class="fas fa-reply me-1"></i> Responder
                    </a>
                    <form asp-action="Eliminar" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger ms-2" 
                                onclick="return confirm('¿Estás seguro de que quieres eliminar este mensaje? Esta acción no se puede deshacer.')">
                            <i class="fas fa-trash me-1"></i> Eliminar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Navegación rápida -->
    <div class="mt-4 d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-list me-1"></i> Ver todos los mensajes
        </a>
        <div>
            <small class="text-muted">
                Mensaje recibido el @Model.FechaUtc.ToString("yyyy-MM-dd HH:mm:ss") UTC
            </small>
        </div>
    </div>
</div>

<style>
    .info-item {
        padding: 8px 0;
        border-bottom: 1px solid #f0f0f0;
    }

    .message-content {
        white-space: pre-wrap;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        line-height: 1.6;
        background: #f8f9fa !important;
    }

    .card {
        border: none;
        border-radius: 10px;
    }

    .card-header {
        border-radius: 10px 10px 0 0 !important;
        font-weight: 600;
    }

    .badge {
        font-size: 0.8em;
    }
</style>