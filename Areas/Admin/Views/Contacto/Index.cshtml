@model IEnumerable<ContactoMensaje>
@{
    ViewData["Title"] = "Mensajes de Contacto";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"]</h1>
        <span class="badge bg-primary fs-6">Total: @ViewBag.TotalMensajes</span>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No hay mensajes de contacto.
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Fecha</th>
                                <th>Nombre</th>
                                <th>Email</th>
                                <th>Mensaje</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var mensaje in Model)
                            {
                                <tr>
                                    <td nowrap>@mensaje.FechaLocal.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@mensaje.Nombre</td>
                                    <td>
                                        <a href="mailto:@mensaje.Email">@mensaje.Email</a>
                                        @if (!string.IsNullOrEmpty(mensaje.IdentityUserId))
                                        {
                                            <span class="badge bg-success ms-1" title="Usuario registrado">‚úì</span>
                                        }
                                    </td>
                                    <td class="text-truncate" style="max-width: 300px;">
                                        @mensaje.Mensaje
                                    </td>
                                    <td nowrap>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Detalles" asp-route-id="@mensaje.Id" 
                                               class="btn btn-outline-primary">Ver</a>
                                            <form asp-action="Eliminar" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@mensaje.Id" />
                                                <button type="submit" class="btn btn-outline-danger" 
                                                        onclick="return confirm('¬øEliminar este mensaje?')">
                                                    üóëÔ∏è
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>