@model IEnumerable<ContactoMensaje>
@{
    ViewData["Title"] = "Mensajes de Contacto";
    // Asumo que tienes Bootstrap Icons disponible, ya que tu CSS de layout lo referencia (.bi).
}

<!-- 
  Cambiamos 'content' por 'container-fluid' para que ocupe
  todo el ancho de la página, en lugar de dejar margen para el sidebar.
  Añadimos padding vertical (py-4).
-->
<div class="container-fluid py-4">

    <!-- 
      Volvemos a un layout d-flex para poner el título a la
      izquierda y el contador a la derecha.
    -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <!-- 
          Quitamos el color en línea para que herede el color --ink (negro)
          de la hoja de estilos principal.
        -->
        <h2 class="mb-0" style="font-weight: 600;">@ViewData["Title"]</h2>
        
        <!-- 
          Reemplazamos 'bg-primary' con 'badge-type' de tu CSS 
          para que el contador combine con la paleta.
        -->
        <span class="badge badge-type fs-6 fw-normal">Total: @ViewBag.TotalMensajes</span>
    </div>

    @if (!Model.Any())
    {
        <!-- 
          Usamos la clase '.empty' de tu CSS para un estado vacío 
          más elegante que el 'alert-info' estándar.
        -->
        <div class="empty text-center py-5">
            <i class="bi bi-envelope-open" style="font-size: 3rem; color: var(--sage-300);"></i>
            <!-- 
              Quitamos el color en línea para que herede el color --ink (negro).
            -->
            <p class="mt-3 mb-0">No hay mensajes de contacto.</p>
        </div>
    }
    else
    {
        <!-- 
          Reemplazamos 'card' con 'filter-card' de tu CSS
          para obtener los bordes redondeados y la sombra definidos.
        -->
        <div class="filter-card border-0">
            <div class="card-body p-0">
                <!-- 
                  Añadimos 'overflow-hidden' y 'border-radius' al contenedor 
                  de la tabla para que respete las esquinas redondeadas de la tarjeta.
                -->
                <div class="table-responsive" style="border-radius: var(--radius); overflow: hidden;">
                    <!-- 
                      Añadimos 'mb-0' para que la tabla se ajuste 
                      perfectamente dentro de la 'filter-card'.
                    -->
                    <table class="table table-striped table-hover mb-0">
                        <!-- 
                          Quitamos 'table-dark'. Tu CSS ya define un estilo
                          para 'thead th' que usa la paleta 'sage'.
                        -->
                        <thead>
                            <tr>
                                <th>Fecha</th>
                                <th>Nombre</th>
                                <th>Email</th>
                                <th>Mensaje</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var mensaje in Model)
                            {
                                <tr class="align-middle">
                                    <td nowrap>@mensaje.FechaLocal.ToString("dd/MM/yyyy HH:mm")</td>
                                    <!-- 
                                      Quitamos el color en línea para que herede el color --ink (negro).
                                    -->
                                    <td class="fw-medium">@mensaje.Nombre</td>
                                    <td>
                                        <!-- 
                                          Cambiamos el color del enlace a uno más oscuro
                                          de la paleta, similar a la captura.
                                        -->
                                        <a href="mailto:@mensaje.Email" style="color: var(--sage-800);">@mensaje.Email</a>
                                        
                                        <!-- 
                                          Cambiamos 'bg-success' por 'badge-type' 
                                          para que combine con el diseño.
                                        -->
                                        @if (!string.IsNullOrEmpty(mensaje.IdentityUserId))
                                        {
                                            <span class="badge badge-type ms-1" title="Usuario registrado">✓ Registrado</span>
                                        }
                                    </td>
                                    <!-- 
                                      Quitamos el color 'muted' para que el texto sea negro.
                                    -->
                                    <td class="text-truncate" style="max-width: 300px;">
                                        @mensaje.Mensaje
                                    </td>
                                    <td nowrap class="text-end">
                                        <div class="btn-group btn-group-sm">
                                            <!-- 
                                              Usamos 'btn-outline-sage' de tu CSS 
                                              y quitamos el texto "Ver" para que sea solo un icono.
                                            -->
                                            <a asp-action="Detalles" asp-route-id="@mensaje.Id" 
                                               class="btn btn-outline-sage" title="Ver">
                                                <i class="bi bi-eye-fill"></i>
                                            </a>
                                            
                                            <!-- 
                                              Mantenemos 'btn-outline-danger' (es un estándar)
                                              y usamos el icono 'bi-trash'.
                                            -->
                                            <form asp-action="Eliminar" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@mensaje.Id" />
                                                <button type="submit" class="btn btn-outline-danger" 
                                                        title="Eliminar"
                                                        onclick="return confirm('¿Está seguro de que desea eliminar este mensaje?')">
                                                    <i class="bi bi-trash-fill"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
