<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Funcionalidad de filtrado (mantenida igual)
        const searchInput = document.getElementById('searchInput');
        const estadoFilter = document.getElementById('estadoFilter');
        const tipoFilter = document.getElementById('tipoFilter');
        const tableRows = document.querySelectorAll('#reservasTable tbody tr');

        function filterTable() {
            const searchTerm = searchInput.value.toLowerCase();
            const estadoValue = estadoFilter.value;
            const tipoValue = tipoFilter.value;

            tableRows.forEach(row => {
                const property = row.cells[0].textContent.toLowerCase();
                const client = row.cells[1].textContent.toLowerCase();
                const estado = row.getAttribute('data-estado');
                const tipo = row.getAttribute('data-tipo');

                const matchesSearch = property.includes(searchTerm) || client.includes(searchTerm);
                const matchesEstado = estadoValue === '' || estado === estadoValue;
                const matchesTipo = tipoValue === '' || tipo === tipoValue;

                row.style.display = matchesSearch && matchesEstado && matchesTipo ? '' : 'none';
            });
        }

        searchInput.addEventListener('input', filterTable);
        estadoFilter.addEventListener('change', filterTable);
        tipoFilter.addEventListener('change', filterTable);

        // Auto-ocultar alertas
        setTimeout(() => {
            document.querySelectorAll('.alert-custom').forEach(alert => {
                alert.style.opacity = '0';
                alert.style.transform = 'translateY(-10px)';
                setTimeout(() => alert.remove(), 300);
            });
        }, 5000);

        // Cerrar alertas manualmente
        document.querySelectorAll('.alert-close').forEach(btn => {
            btn.addEventListener('click', function() {
                const alert = this.closest('.alert-custom');
                alert.style.opacity = '0';
                alert.style.transform = 'translateY(-10px)';
                setTimeout(() => alert.remove(), 300);
            });
        });
    });
</script>