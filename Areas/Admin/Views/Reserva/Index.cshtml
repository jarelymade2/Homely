@model IEnumerable<StayGo.Models.Reserva>

@{
    ViewData["Title"] = "Gesti√≥n de Reservas";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Crear" class="btn btn-primary">Crear Nueva Reserva</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Propiedad</th>
            <th>Cliente</th>
            <th>Check-In</th>
            <th>Check-Out</th>
            <th>Estado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Propiedad.Titulo)</td>
            <td>@Html.DisplayFor(modelItem => item.Usuario.Email)</td>
            <td>@item.CheckIn.ToString("dd/MM/yyyy")</td>
            <td>@item.CheckOut.ToString("dd/MM/yyyy")</td>
            <td><span class="badge bg-info text-dark">@item.Estado</span></td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a> 
                @if (item.Estado != StayGo.Models.Enums.EstadoReserva.Cancelada)
                {
                    <a asp-action="Cancel" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Cancelar</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>