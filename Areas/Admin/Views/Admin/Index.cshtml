@{
    ViewData["Title"] = "Panel de Administración";
    Layout = "_Layout"; // o usa tu _Layout si quieres que comparta estilos
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { overflow-x:hidden; }
        .sidebar {
            height:100vh; width:250px;
            position:fixed; top:0; left:-250px;
            background:#343a40; color:white;
            transition: left 0.3s;
            padding-top:60px;
            z-index: 1040;
        }
        .sidebar.open { left:0; }
        .sidebar a {
            display:block; padding:12px 20px; color:#ddd; text-decoration:none;
        }
        .sidebar a:hover { background:#495057; color:white; }
        .content { margin-left:0; transition: margin-left .3s; padding:20px; }
        .content.shift { margin-left:250px; }
        .topbar {
            height:60px; background:#fff; border-bottom:1px solid #ddd;
            display:flex; align-items:center; padding:0 16px;
        }
        .close-btn {
            position:absolute; top:10px; right:10px;
            background:none; border:none; color:white;
            font-size:22px; cursor:pointer;
        }
    </style>
</head>
<body>
    <!-- Topbar con botón hamburguesa -->
    <div class="topbar">
        <button id="btnMenu" class="btn btn-outline-dark">☰</button>
        <h5 class="ms-3 mb-0">StayGo • Admin</h5>
    </div>

    <!-- Sidebar -->
    <div id="sidebar" class="sidebar">
        <!-- Botón para cerrar con flecha -->
        <button id="btnClose" class="close-btn" aria-label="Cerrar menú">←</button>

        <a asp-controller="Admin" asp-action="Index">Dashboard</a>
        <a asp-controller="Propiedad" asp-action="Index">Propiedades</a>
        <a asp-controller="Reserva" asp-action="Index">Reservas</a>
        <a asp-controller="Usuario" asp-action="Index">Usuarios</a>
        <a asp-controller="Reportes" asp-action="Index">Reportes</a>
        <a asp-controller="Ajustes" asp-action="Index">Ajustes</a>
        <form asp-controller="Account" asp-action="Logout" method="post" class="mt-3">
            <button class="btn btn-danger w-100" type="submit">Cerrar sesión</button>
        </form>
    </div>

    <!-- Contenido -->
    <div id="content" class="content">
        <div class="container">
            <h1 class="mt-3">Bienvenido al panel de administración</h1>
            <p>Aquí podrás gestionar alojamientos, reservas, usuarios, reportes y ajustes.</p>
        </div>
    </div>

    <script>
        const sidebar = document.getElementById('sidebar');
        const content = document.getElementById('content');
        const btnMenu = document.getElementById('btnMenu');
        const btnClose = document.getElementById('btnClose');

        btnMenu.addEventListener('click', () => {
            sidebar.classList.add('open');
            content.classList.add('shift');
        });

        btnClose.addEventListener('click', () => {
            sidebar.classList.remove('open');
            content.classList.remove('shift');
        });
    </script>
</body>
</html>
