@{
    ViewData["Title"] = "Panel de Administración";

}

<section class="hero mb-4">
    <h1>Panel de administración</h1>
    <p class="mb-0">Gestiona propiedades, reservas, usuarios y reportes.</p>
</section>

<div class="row g-3 mb-3">
    <div class="col-6 col-lg-3">
        <div class="kpi">
            <div class="label">Propiedades</div>
            <div class="value">@((ViewBag.TotalPropiedades ?? "—").ToString())</div>
        </div>
    </div>
    <div class="col-6 col-lg-3">
        <div class="kpi">
            <div class="label">Reservas (hoy)</div>
            <div class="value">@((ViewBag.ReservasHoy ?? "—").ToString())</div>
        </div>
    </div>
    <div class="col-6 col-lg-3">
        <div class="kpi">
            <div class="label">Usuarios activos</div>
            <div class="value">@((ViewBag.UsuariosActivos ?? "—").ToString())</div>
        </div>
    </div>
    <div class="col-6 col-lg-3">
        <div class="kpi">
            <div class="label">Ingresos (S/)</div>
            <div class="value">@((ViewBag.IngresosHoy ?? "—").ToString())</div>
        </div>
    </div>
</div>


<div class="row g-3">
    <div class="col-12 col-lg-6">
        <div class="card-action">
            <div class="d-flex align-items-center gap-3">
                <i class="bi bi-house-add"></i>
                <div>
                    <div class="fw-semibold">Propiedades</div>
                    <div class="text-muted small">Crea o gestiona alojamientos.</div>
                </div>
            </div>
            <div class="d-flex gap-2">
                <a asp-area="Admin" asp-controller="Propiedad" asp-action="Crear" class="btn btn-sm">Nueva</a>
                <a asp-area="Admin" asp-controller="Propiedad" asp-action="Index" class="btn btn-sm">Ver todas</a>
            </div>
        </div>
    </div>

    <div class="col-12 col-lg-6">
        <div class="card-action">
            <div class="d-flex align-items-center gap-3">
                <i class="bi bi-calendar-event"></i>
                <div>
                    <div class="fw-semibold">Reservas</div>
                    <div class="text-muted small">Consulta y administra reservas.</div>
                </div>
            </div>
            <div class="d-flex gap-2">
                <a asp-area="Admin" asp-controller="Reserva" asp-action="Index" class="btn btn-sm">Abrir</a>
            </div>
        </div>
    </div>

    <div class="col-12 col-lg-6">
        <div class="card-action">
            <div class="d-flex align-items-center gap-3">
                <i class="bi bi-people"></i>
                <div>
                    <div class="fw-semibold">Usuarios</div>
                    <div class="text-muted small">Gestión de cuentas y roles.</div>
                </div>
            </div>
            <div class="d-flex gap-2">
                <a asp-area="Admin" asp-controller="Usuario" asp-action="Index" class="btn btn-sm">Administrar</a>
            </div>
        </div>
    </div>

    <div class="col-12 col-lg-6">
        <div class="card-action">
            <div class="d-flex align-items-center gap-3">
                <i class="bi bi-graph-up"></i>
                <div>
                    <div class="fw-semibold">Reportes</div>
                    <div class="text-muted small">Métricas y desempeño.</div>
                </div>
            </div>
            <div class="d-flex gap-2">
                <a asp-area="Admin" asp-controller="Reportes" asp-action="Index" class="btn btn-sm">Ver</a>
            </div>
        </div>
    </div>
</div>
