@section Hero {
  <div class="hero">
    <div class="overlay"></div>

    <div class="container position-relative py-5">
      <div class="login-wrap">

        <h2 class="text-center mb-1 login-title">Iniciar sesión</h2>
        <p class="text-center mb-4 login-subtitle">Bienvenido a Homely</p>

        <form method="post">
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <input type="hidden" asp-for="ReturnUrl" />

          <!-- Email -->
          <div class="login-field">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control" autocomplete="username" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
          </div>

          <!-- Password -->
          <div class="login-field">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
          </div>

          <div class="d-flex justify-content-between align-items-center mb-3 login-meta">
            <div class="form-check">
              <input class="form-check-input" asp-for="Input.RememberMe" />
              <label class="form-check-label" asp-for="Input.RememberMe"></label>
            </div>
            <a asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a>
          </div>

          <button type="submit" class="btn btn-sage w-100">Entrar</button>
        </form>

        <div class="login-divider my-3"><span>o</span></div>

        <!-- Proveedores externos (Google) -->
        <section class="text-center">
          @await Html.PartialAsync("_ExternalLoginsPartial", Model.ExternalLogins)
        </section>

        <div class="text-center mt-3 login-meta">
          <span>¿Aún no tienes cuenta?</span>
          <a class="ms-1" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Regístrate</a>
        </div>

      </div>
    </div>
  </div>
}

