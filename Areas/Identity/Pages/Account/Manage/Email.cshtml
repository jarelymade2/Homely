@page
@model StayGo.Areas.Identity.Pages.Account.Manage.EmailModel
@{
    ViewData["Title"] = "Administrar Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<h3 class="fw-bold">@ViewData["Title"]</h3>
<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form id="email-form" method="post">
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>
            
            @if (Model.IsEmailConfirmed)
            {
                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" placeholder="Escribe tu email." disabled />
                    <label asp-for="Email" class="form-label"></label>
                    <div class="input-group-append">
                        <span class="h-100 input-group-text text-success font-weight-bold">
                            <i class="bi bi-check-circle-fill me-1"></i> Verificado
                        </span>
                    </div>
                </div>
            }
            else
            {
                <div class="form-floating mb-1">
                    <input asp-for="Email" class="form-control" placeholder="Escribe tu email." disabled />
                    <label asp-for="Email" class="form-label"></label>
                </div>
                
                <div class="mb-3">
                    <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-brand btn-sm">Enviar email de verificaciÃ³n</button>
                </div>
            }
            
            <div class="form-floating mb-3">
                <input asp-for="Input.NewEmail" class="form-control" placeholder="Escribe tu nuevo email." />
                <label asp-for="Input.NewEmail" class="form-label"></label>
                <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
            </div>
            
            @* ðŸŸ¢ CORRECCIÃ“N DE ESTILO: Usar btn-brand para el verde degradado *@
            <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="w-100 btn btn-lg btn-brand">Cambiar email</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}