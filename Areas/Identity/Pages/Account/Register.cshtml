@page
@using Microsoft.Extensions.Options
@model StayGo.Areas.Identity.Pages.Account.RegisterModel
@inject IOptions<GoogleReCaptchaSettings> ReCaptchaConfig

@{
    ViewData["Title"] = "Regístrate";
    Layout = "/Views/Shared/_Layout.cshtml";
}

@section Hero {
    <section class="hero">
        <div class="overlay">
            <div class="container d-flex align-items-center justify-content-center h-100">
                <div class="form-container bg-dark bg-opacity-75 p-4 rounded-4 shadow-lg" style="max-width: 480px; width: 100%;">
                    <h2 class="text-white mb-4 text-center">Regístrate</h2>

                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <!-- Nombre -->
                        <div class="mb-3">
                            <label asp-for="Input.FirstName" class="form-label text-white">Nombre</label>
                            <input asp-for="Input.FirstName" class="form-control" required />
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>

                        <!-- Apellido -->
                        <div class="mb-3">
                            <label asp-for="Input.LastName" class="form-label text-white">Apellido</label>
                            <input asp-for="Input.LastName" class="form-control" required />
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>

                        <!-- Correo electrónico -->
                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label text-white">Correo electrónico</label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="nombre@ejemplo.com" required />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <!-- Contraseña -->
                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label text-white">Contraseña</label>
                            <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" required />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <!-- Confirmar contraseña -->
                        <div class="mb-3">
                            <label asp-for="Input.ConfirmPassword" class="form-label text-white">Confirma la contraseña</label>
                            <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" required />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!-- ✅ reCAPTCHA -->
                        <div class="mb-4 text-center">
                            <div class="g-recaptcha" data-sitekey="@ReCaptchaConfig.Value.SiteKey"></div>
                            <input type="hidden" asp-for="Recaptcha" id="Recaptcha" />
                            <span class="text-danger" asp-validation-for="Recaptcha"></span>
                        </div>

                        <!-- Botón de registro -->
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-success btn-lg fw-semibold">
                            <i class="bi bi-person-plus-fill me-2"></i> Regístrate
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </section>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <!-- ✅ Script de Google reCAPTCHA -->
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>

    <script>
        // Asignar token de reCAPTCHA al campo oculto antes de enviar el formulario
        document.getElementById('registerForm').addEventListener('submit', function (e) {
            var token = grecaptcha.getResponse();
            document.getElementById('Recaptcha').value = token;

            // Opcional: prevenir envío si no completó reCAPTCHA
            if (!token) {
                e.preventDefault();
                alert('Debes completar el reCAPTCHA.');
            }
        });
    </script>
}
