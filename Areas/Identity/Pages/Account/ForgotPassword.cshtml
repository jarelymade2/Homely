@page
@model StayGo.Areas.Identity.Pages.Account.ForgotPasswordModel

@{
    ViewData["Title"] = "Olvidé mi contraseña";
    Layout = "/Views/Shared/_Layout.cshtml";
}

@section Hero {
    <section class="hero">
        <div class="overlay">
            <div class="container d-flex align-items-center justify-content-center h-100">
                <div class="form-container">
                    <h2 class="text-white">¿Olvidaste tu contraseña?</h2>
                    <p class="text-white">Ingresa tu correo electrónico para que podamos enviarte un enlace de restablecimiento de contraseña.</p>
                    <form method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label text-white">Correo electrónico</label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nombre@ejemplo.com" required />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <button type="submit" class="w-100 btn btn-brand">Restablecer contraseña</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}