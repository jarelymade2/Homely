@model IEnumerable<StayGo.Models.Reserva>
@using System.Globalization
@using StayGo.Models

@{
    ViewData["Title"] = "Mis reservas";
    var pe = new CultureInfo("es-PE");
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container py-5 mt-4">
    <!-- Header Section -->
    <div class="mb-5">
        <div class="d-flex justify-content-between align-items-start mb-4 flex-wrap gap-3">
            <div>
                <h1 class="display-5 fw-bold mb-2" style="color: var(--sage-900);">Mis Reservas</h1>
                <p class="text-muted">Gestiona y visualiza todas tus reservas en un solo lugar</p>
            </div>
        </div>
        <!-- Action Buttons -->
        <div id="actionButtons" style="display: none;" class="action-buttons-container">
            <button type="button" id="btnEliminarSeleccionadas" class="btn btn-danger">
                <i class="bi bi-trash"></i> Eliminar seleccionadas
            </button>
            <button type="button" id="btnCancelarSeleccion" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i> Cancelar selección
            </button>
        </div>
    </div>

    @if (TempData["MensajeReserva"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["MensajeReserva"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="text-center py-5 text-muted">
            <i class="bi bi-calendar-x display-4"></i>
            <p class="mt-3">No tienes reservas aún.</p>
            <a asp-controller="Propiedad" asp-action="Index" class="btn btn-sage mt-2">
                <i class="bi bi-search"></i> Buscar propiedades
            </a>
        </div>
    }
    else
    {
        <div class="reservas-grid" id="reservasTable">
            @foreach (var r in Model)
            {
                <div class="reserva-card reserva-row" data-reserva-id="@r.Id" data-estado="@r.Estado">
                    <!-- Checkbox -->
                    <div class="reserva-checkbox-wrapper">
                        <input type="checkbox" class="form-check-input reserva-checkbox" value="@r.Id"
                               @(r.Estado == EstadoReserva.Pendiente || r.Estado == EstadoReserva.Cancelada ? "" : "disabled")>
                    </div>

                    <!-- Card Content -->
                    <div class="reserva-card-content">
                        <!-- Header with Property Title and Status -->
                        <div class="reserva-header">
                            <div class="reserva-title-section">
                                <a asp-controller="Propiedad" asp-action="Details" asp-route-id="@r.PropiedadId" class="text-decoration-none">
                                    <h5 class="reserva-title">
                                        <i class="bi bi-house-door"></i> @r.Propiedad?.Titulo
                                    </h5>
                                </a>
                            </div>
                            <div class="reserva-status">
                                @switch (r.Estado)
                                {
                                    case EstadoReserva.Pendiente:
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-clock"></i> Pendiente
                                        </span>
                                        break;
                                    case EstadoReserva.Confirmada:
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Confirmada
                                        </span>
                                        break;
                                    case EstadoReserva.Cancelada:
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle"></i> Cancelada
                                        </span>
                                        break;
                                    case EstadoReserva.Rechazada:
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-dash-circle"></i> Rechazada
                                        </span>
                                        break;
                                    case EstadoReserva.Finalizada:
                                        <span class="badge bg-info">
                                            <i class="bi bi-flag"></i> Finalizada
                                        </span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary">@r.Estado</span>
                                        break;
                                }
                            </div>
                        </div>

                        <!-- Details Grid -->
                        <div class="reserva-details">
                            <div class="detail-item">
                                <span class="detail-label">
                                    <i class="bi bi-calendar-event"></i> Check-in
                                </span>
                                <span class="detail-value">@r.CheckIn.ToString("dd/MM/yyyy")</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">
                                    <i class="bi bi-calendar-check"></i> Check-out
                                </span>
                                <span class="detail-value">@r.CheckOut.ToString("dd/MM/yyyy")</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">
                                    <i class="bi bi-people"></i> Huéspedes
                                </span>
                                <span class="detail-value">@r.Huespedes</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">
                                    <i class="bi bi-cash-coin"></i> Monto
                                </span>
                                <span class="detail-value fw-bold">@r.PrecioTotal.ToString("C", pe)</span>
                            </div>
                        </div>

                        <!-- Actions -->
                        <div class="reserva-actions">
                            @if (r.Estado == EstadoReserva.Pendiente)
                            {
                                <a asp-controller="Pago" asp-action="Iniciar" asp-route-reservaId="@r.Id"
                                   class="btn btn-sm btn-sage">
                                    <i class="bi bi-credit-card"></i> Pagar
                                </a>
                            }
                            else if (r.Estado == EstadoReserva.Confirmada)
                            {
                                <span class="text-success small">
                                    <i class="bi bi-check-circle-fill"></i> Pagada
                                </span>
                            }

                            @if (r.Estado == EstadoReserva.Pendiente || r.Estado == EstadoReserva.Cancelada)
                            {
                                <form asp-action="Delete" asp-route-id="@r.Id" method="post" class="d-inline"
                                      onsubmit="return confirm('¿Estás seguro de que deseas eliminar esta reserva?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    :root {
        --sage-50: #f5f7f4;
        --sage-100: #e9efe6;
        --sage-200: #dce6d7;
        --sage-500: #7fa174;
        --sage-700: #3f6b4f;
        --sage-800: #2f5b45;
        --sage-900: #26453a;
    }

    /* Grid Layout */
    .reservas-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
        gap: 2rem;
        margin-bottom: 3rem;
    }

    @@media (max-width: 768px) {
        .reservas-grid {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }
    }

    /* Card Styles */
    .reserva-card {
        background: white;
        border-radius: 1.25rem;
        border: 1px solid var(--sage-100);
        padding: 1.5rem;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        display: flex;
        gap: 1rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
    }

    .reserva-card:hover {
        border-color: var(--sage-200);
        box-shadow: 0 8px 24px rgba(63, 107, 79, 0.12);
        transform: translateY(-4px);
    }

    .reserva-card.selected {
        background: linear-gradient(135deg, rgba(63, 107, 79, 0.05) 0%, rgba(127, 161, 116, 0.05) 100%);
        border-color: var(--sage-500);
        box-shadow: 0 0 0 3px rgba(63, 107, 79, 0.1);
    }

    /* Checkbox Wrapper */
    .reserva-checkbox-wrapper {
        display: flex;
        align-items: flex-start;
        padding-top: 0.25rem;
    }

    .form-check-input {
        cursor: pointer;
        width: 1.5em;
        height: 1.5em;
        border-radius: 0.375rem;
        border: 2px solid var(--sage-200);
        transition: all 0.2s ease;
    }

    .form-check-input:checked {
        background-color: var(--sage-700);
        border-color: var(--sage-700);
    }

    .form-check-input:disabled {
        opacity: 0.4;
        cursor: not-allowed;
    }

    /* Card Content */
    .reserva-card-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    /* Header */
    .reserva-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 1rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid var(--sage-100);
    }

    .reserva-title-section {
        flex: 1;
    }

    .reserva-title {
        font-size: 1.125rem;
        font-weight: 600;
        color: var(--sage-900);
        margin: 0;
        transition: color 0.2s ease;
    }

    .reserva-title-section a:hover .reserva-title {
        color: var(--sage-700);
    }

    .reserva-title i {
        margin-right: 0.5rem;
        color: var(--sage-700);
    }

    .reserva-status {
        white-space: nowrap;
    }

    .badge {
        padding: 0.5rem 0.875rem;
        font-size: 0.875rem;
        font-weight: 500;
        border-radius: 0.5rem;
    }

    /* Details Grid */
    .reserva-details {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
    }

    @@media (max-width: 480px) {
        .reserva-details {
            grid-template-columns: 1fr;
        }
    }

    .detail-item {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .detail-label {
        font-size: 0.875rem;
        color: #6b7280;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .detail-label i {
        color: var(--sage-700);
        font-size: 1rem;
    }

    .detail-value {
        font-size: 1rem;
        color: var(--sage-900);
        font-weight: 500;
    }

    /* Actions */
    .reserva-actions {
        display: flex;
        gap: 0.75rem;
        padding-top: 1rem;
        border-top: 1px solid var(--sage-100);
        flex-wrap: wrap;
    }

    .reserva-actions .btn {
        flex: 1;
        min-width: 120px;
        font-size: 0.875rem;
        font-weight: 500;
        border-radius: 0.5rem;
        transition: all 0.2s ease;
    }

    .reserva-actions .btn-sage {
        background-color: var(--sage-700);
        border-color: var(--sage-700);
        color: white;
    }

    .reserva-actions .btn-sage:hover {
        background-color: var(--sage-800);
        border-color: var(--sage-800);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(63, 107, 79, 0.3);
    }

    .reserva-actions .btn-outline-danger:hover {
        transform: translateY(-2px);
    }

    /* Action Buttons */
    .action-buttons-container {
        display: flex;
        gap: 1rem;
        padding: 1.5rem;
        background: linear-gradient(135deg, rgba(63, 107, 79, 0.05) 0%, rgba(127, 161, 116, 0.05) 100%);
        border-radius: 1rem;
        border: 1px solid var(--sage-200);
        animation: slideIn 0.3s ease;
        flex-wrap: wrap;
    }

    .action-buttons-container .btn {
        flex: 1;
        min-width: 180px;
        font-weight: 600;
        padding: 0.75rem 1.5rem;
        border-radius: 0.75rem;
        transition: all 0.2s ease;
    }

    .action-buttons-container .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .action-buttons-container .btn-danger:hover {
        background-color: #c82333;
        border-color: #c82333;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(220, 53, 69, 0.3);
    }

    .action-buttons-container .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .action-buttons-container .btn-secondary:hover {
        background-color: #5a6268;
        border-color: #5a6268;
        transform: translateY(-2px);
    }

    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .btn-group {
        gap: 0.5rem;
    }

    /* Fade Out Animation */
    @@keyframes fadeOut {
        from {
            opacity: 1;
            transform: translateX(0);
        }
        to {
            opacity: 0;
            transform: translateX(-20px);
        }
    }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const selectAllCheckbox = document.getElementById('selectAll');
            const reservaCheckboxes = document.querySelectorAll('.reserva-checkbox');
            const actionButtons = document.getElementById('actionButtons');
            const btnEliminarSeleccionadas = document.getElementById('btnEliminarSeleccionadas');
            const btnCancelarSeleccion = document.getElementById('btnCancelarSeleccion');
            const reservaRows = document.querySelectorAll('.reserva-row');

            // Función para actualizar el estado de los botones
            function updateActionButtons() {
                const selectedCount = document.querySelectorAll('.reserva-checkbox:checked').length;

                if (selectedCount > 0) {
                    actionButtons.style.display = 'flex';
                    btnEliminarSeleccionadas.textContent = `Eliminar seleccionadas (${selectedCount})`;
                } else {
                    actionButtons.style.display = 'none';
                }
            }

            // Seleccionar/deseleccionar todas
            selectAllCheckbox.addEventListener('change', function() {
                reservaCheckboxes.forEach(checkbox => {
                    if (!checkbox.disabled) {
                        checkbox.checked = this.checked;
                        updateRowHighlight(checkbox);
                    }
                });
                updateActionButtons();
            });

            // Seleccionar individual
            reservaCheckboxes.forEach(checkbox => {
                checkbox.addEventListener('change', function() {
                    updateRowHighlight(this);
                    updateActionButtons();

                    // Actualizar estado del checkbox "Seleccionar todas"
                    const allChecked = Array.from(reservaCheckboxes)
                        .filter(cb => !cb.disabled)
                        .every(cb => cb.checked);
                    const someChecked = Array.from(reservaCheckboxes)
                        .filter(cb => !cb.disabled)
                        .some(cb => cb.checked);

                    selectAllCheckbox.checked = allChecked;
                    selectAllCheckbox.indeterminate = someChecked && !allChecked;
                });
            });

            // Resaltar fila cuando se selecciona
            function updateRowHighlight(checkbox) {
                const row = checkbox.closest('.reserva-row');
                if (checkbox.checked) {
                    row.classList.add('selected');
                } else {
                    row.classList.remove('selected');
                }
            }

            // Cancelar selección
            btnCancelarSeleccion.addEventListener('click', function() {
                selectAllCheckbox.checked = false;
                selectAllCheckbox.indeterminate = false;
                reservaCheckboxes.forEach(checkbox => {
                    checkbox.checked = false;
                    updateRowHighlight(checkbox);
                });
                updateActionButtons();
            });

            // Eliminar seleccionadas
            btnEliminarSeleccionadas.addEventListener('click', async function() {
                const selectedIds = Array.from(document.querySelectorAll('.reserva-checkbox:checked'))
                    .map(cb => cb.value);

                if (selectedIds.length === 0) {
                    alert('Por favor selecciona al menos una reserva.');
                    return;
                }

                if (!confirm(`¿Estás seguro de que deseas eliminar ${selectedIds.length} reserva(s)?`)) {
                    return;
                }

                try {
                    const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;

                    const response = await fetch('@Url.Action("DeleteMultiple", "Reserva")', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': token
                        },
                        body: JSON.stringify(selectedIds)
                    });

                    const data = await response.json();

                    if (data.success) {
                        // Mostrar mensaje de éxito
                        const alertDiv = document.createElement('div');
                        alertDiv.className = 'alert alert-success alert-dismissible fade show';
                        alertDiv.innerHTML = `
                            <i class="bi bi-check-circle-fill"></i> ${data.message}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        `;

                        // Insertar alerta al inicio del contenedor principal
                        const mainContent = document.querySelector('main') || document.querySelector('.container');
                        if (mainContent) {
                            mainContent.insertBefore(alertDiv, mainContent.firstChild);
                        }

                        // Eliminar filas de la tabla
                        selectedIds.forEach(id => {
                            const row = document.querySelector(`[data-reserva-id="${id}"]`);
                            if (row) {
                                row.style.animation = 'fadeOut 0.3s ease';
                                setTimeout(() => row.remove(), 300);
                            }
                        });

                        // Resetear controles
                        updateActionButtons();
                        selectAllCheckbox.checked = false;
                        selectAllCheckbox.indeterminate = false;

                        // Si no hay más reservas, recargar la página
                        setTimeout(() => {
                            if (document.querySelectorAll('.reserva-row').length === 0) {
                                location.reload();
                            }
                        }, 500);
                    } else {
                        alert('Error: ' + data.message);
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('Error al eliminar las reservas: ' + error.message);
                }
            });
        });

        // Animación de desvanecimiento
        const style = document.createElement('style');
        style.textContent = `
            @@keyframes fadeOut {
                from {
                    opacity: 1;
                    transform: translateX(0);
                }
                to {
                    opacity: 0;
                    transform: translateX(-20px);
                }
            }
        `;
        document.head.appendChild(style);
    </script>
}
