    width: 100vw;
    margin-left: calc(-50vw + 50%);
}

/* Evita scrollbar lateral si algo se pasa 1px */
body {
    overflow-x: hidden;
}

</style>

    @RenderSection("Styles", required: false)

    <!-- chat -->
    <button id="sg-chat-btn" aria-label="Abrir chat con asistente">
        <i class="bi bi-chat-dots-fill"></i>
    </button>

    <div id="sg-chat-box" aria-label="Chat asistente StayGo">
        <div id="sg-chat-header">
            <span>Asistente Homely</span>
            <button type="button" style="background:none;border:none;color:#fff;font-size:1rem;" id="sg-chat-close">&times;</button>
        </div>
        <div id="sg-chat-messages">
            <div class="sg-msg-bot">
                ¡Hola! 👋 Soy el asistente de Homely. ¿Te ayudo a encontrar una propiedad o te explico cómo reservar?
            </div>
        </div>
        <div id="sg-chat-input">
            <input id="sg-chat-text" type="text" placeholder="Escribe tu pregunta..." autocomplete="off" />
            <button id="sg-chat-send"><i class="bi bi-send-fill"></i></button>
        </div>
    </div>
    <script>
        (function () {
            const btn = document.getElementById('sg-chat-btn');
            const box = document.getElementById('sg-chat-box');
            const close = document.getElementById('sg-chat-close');
            const messages = document.getElementById('sg-chat-messages');
            const input = document.getElementById('sg-chat-text');
            const sendBtn = document.getElementById('sg-chat-send');

            function toggleChat(show) {
                box.style.display = show ? 'flex' : (box.style.display === 'flex' ? 'none' : 'flex');
            }

            btn.addEventListener('click', () => toggleChat(true));
            close.addEventListener('click', () => toggleChat(false));

            function appendMessage(text, cls) {
                const div = document.createElement('div');
                div.className = cls;
                div.textContent = text;
                messages.appendChild(div);
                messages.scrollTop = messages.scrollHeight;
            }

            async function sendMessage() {
                const text = input.value.trim();
                if (!text) return;

                appendMessage(text, 'sg-msg-user');
                input.value = '';

                const loading = document.createElement('div');
                loading.className = 'sg-msg-bot';
                loading.textContent = 'Escribiendo...';
                messages.appendChild(loading);
                messages.scrollTop = messages.scrollHeight;

                try {
                    const res = await fetch('/api/ChatApi', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ message: text })
                    });

                    const data = await res.json();
                    loading.remove();
                    appendMessage(data.reply || 'No pude responder ahora 😅', 'sg-msg-bot');
                } catch (err) {
                    loading.remove();
                    appendMessage('Ocurrió un error hablando con el asistente.', 'sg-msg-bot');
                }
            }

            sendBtn.addEventListener('click', sendMessage);
            input.addEventListener('keydown', e => {
                if (e.key === 'Enter') sendMessage();
            });
        })();
    </script>
</head>
