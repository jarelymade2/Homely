@using Microsoft.AspNetCore.Identity
@using StayGo.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - StayGo</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StayGo.styles.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body class="bg-body">
    <header class="sticky-top bg-white border-bottom">
        <nav class="navbar navbar-expand-lg container py-2">
            <a class="navbar-brand fw-semibold d-flex align-items-center gap-2" asp-controller="Home" asp-action="Index">
                <img src="/images/logo.png" alt="StayGo" height="28" />
                StayGo
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="Propiedad" asp-action="Index">Alojamientos</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Contact" asp-action="Index">Contacto</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Mapa">Mapa</a></li>
                </ul>

                <div class="d-flex align-items-center gap-2">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    @RenderSection("Hero", required: false)

    <div class="container mt-3">
        @if (TempData["Success"] is string ok)
        { <div class="alert alert-success shadow-sm">@ok</div> }
        @if (TempData["Error"] is string err)
        { <div class="alert alert-danger shadow-sm">@err</div> }
    </div>

    <main class="container py-4">
    @RenderBody()
    </main>

    <footer class="border-top py-4 mt-auto">
        <div class="container d-flex flex-wrap justify-content-between align-items-center gap-2">
            <span class="text-muted">© @DateTime.Now.Year · StayGo</span>
            <ul class="nav gap-3 small">
                <li class="nav-item"><a class="nav-link text-muted" asp-controller="Home" asp-action="Privacidad">Privacidad</a></li>
                <li class="nav-item"><a class="nav-link text-muted" asp-controller="Home" asp-action="Terminos">Términos</a></li>
                <li class="nav-item"><a class="nav-link text-muted" asp-controller="Home" asp-action="Ayuda">Ayuda</a></li>
            </ul>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>