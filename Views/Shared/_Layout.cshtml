@* /Views/Shared/_Layout.cshtml *@
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - HomeLy</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StayGo.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)
</head>
<body class="bg-body">
    <header class="sticky-top">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                @* SOLUCIÓN: Agregado asp-area="" al enlace del logo *@
                <a class="navbar-brand fw-semibold d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/images/logo.png" alt="HomeLy" height="28" />
                    HomeLy
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Alternar navegación">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @* SOLUCIÓN: Agregado asp-area="" a los enlaces de la navegación principal *@
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Propiedad" asp-action="Index">Propiedades</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Contacto" asp-action="Index">Contacto</a></li>
                    </ul>

                    <ul class="navbar-nav">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index">
                                    <i class="bi bi-person-circle"></i> @User.Identity!.Name
                                </a>
                            </li>
                            <li class="nav-item">
                                <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
                                    <button class="btn btn-sm btn-outline-light ms-lg-2" type="submit">Salir</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Iniciar sesión</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Registrarse</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @RenderSection("Hero", required: false)

    <div class="container mt-3">
        @if (TempData["ok"] is string okMsg)
        { <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            @okMsg <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div> }
        @if (TempData["Success"] is string ok2)
        { <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            @ok2 <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div> }
        @if (TempData["Error"] is string err)
        { <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            @err <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div> }
    </div>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="border-top py-4 mt-auto">
        <div class="container d-flex flex-wrap justify-content-between align-items-center gap-2">
            <span class="text-muted">© @DateTime.Now.Year · HomeLy</span>
            <ul class="nav gap-3 small">
                @* SOLUCIÓN: Agregado asp-area="" a los enlaces del footer *@
                <li class="nav-item"><a class="nav-link text-muted" asp-area="" asp-controller="Home" asp-action="Privacidad">Privacidad</a></li>
                <li class="nav-item"><a class="nav-link text-muted" asp-area="" asp-controller="Home" asp-action="Terminos">Términos</a></li>
                <li class="nav-item"><a class="nav-link text-muted" asp-area="" asp-controller="Home" asp-action="Ayuda">Ayuda</a></li>
            </ul>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>