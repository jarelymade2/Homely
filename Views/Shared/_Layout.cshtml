<style>
    :root {
        /* Sage palette */
        --sage-50: #f5f7f4; --sage-100: #e9efe6; --sage-200: #dce6d7; --sage-300: #c9d7c2;
        --sage-400: #a3b18a; --sage-500: #7fa174; --sage-600: #5e8a63; --sage-700: #3f6b4f;
        --sage-800: #2f5b45; --sage-900: #26453a;
        
        /* Variables semánticas */
        --bg: var(--sage-50);
        --ink: #243036;
        --muted: #cfe3d9;
        --brand: #e9f3ef;
        --accent: #fff;
        --surface: #ffffff;
        --shadow: 0 10px 25px rgba(36,48,54,.08);
        --radius: 16px;
        --ring: rgba(63,107,79,.35);
        --transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        --shadow-light: 0 10px 25px rgba(0, 0, 0, 0.05);
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    html, body {
        height: 100%;
        scroll-behavior: smooth;
        overflow-x: hidden;
        width: 100%;
        max-width: 100vw;
    }

    body {
        background: var(--bg);
        color: var(--ink);
        font-family: 'Inter', sans-serif;
        line-height: 1.7;
        font-weight: 400;
        width: 100%;
        max-width: 100vw;
        margin: 0;
        padding: 0;
    }

    h1, h2, h3, h4, h5, h6, .brand {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, san ;
        font-weight: 600;
        line-height: 1.2;
    }

    /* Header - CON PADDING CORRECTO */
    .topbar {
        height: 90px;
        background: rgba(36, 48, 54, 0.95);
        backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(127, 161, 116, 0.2);
        display: flex;
        align-items: center;
        padding: 0;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 1000;
        transition: var(--transition);
    }

    .topbar .container {
        width: 100%;
        max-width: 100%;
        padding: 0 20px;
    }

    .topbar.scrolled {
        height: 80px;
        background: rgba(36, 48, 54, 0.98);
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
    }

    .brand {
        display: flex;
        align-items: center;
        gap: .75rem;
        font-weight: 700;
        letter-spacing: 1px;
        color: var(--sage-500);
        text-decoration: none;
        font-size: 1.5rem;
        transition: var(--transition);
    }

    .brand:hover {
        color: var(--sage-400);
    }

    .brand .logo {
        width: 42px;
        height: 42px;
        border-radius: 12px;
        background: linear-gradient(135deg, var(--sage-500), var(--sage-700));
        display: grid;
        place-items: center;
        color: white;
        box-shadow: 0 4px 12px rgba(127, 161, 116, 0.3);
        transition: var(--transition);
    }

    .brand:hover .logo {
        transform: rotate(5deg) scale(1.05);
    }

    .topbar .navbar-nav .nav-link {
        color: var(--brand);
        font-weight: 500;
        position: relative;
        padding: 8px 16px;
        margin: 0 4px;
        transition: var(--transition);
    }

    .topbar .navbar-nav .nav-link::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        width: 0;
        height: 2px;
        background: var(--sage-500);
        transition: var(--transition);
        transform: translateX(-50%);
    }

    .topbar .navbar-nav .nav-link:hover,
    .topbar .navbar-nav .nav-link.active {
        color: var(--sage-500);
    }

    .topbar .navbar-nav .nav-link:hover::after,
    .topbar .navbar-nav .nav-link.active::after {
        width: 80%;
    }

    .navbar-toggler {
        border: 1px solid rgba(127, 161, 116, 0.3);
        background: transparent;
        transition: var(--transition);
        color: var(--sage-500);
        font-size: 1.25rem;
        padding: .4rem .7rem;
    }

    .navbar-toggler:hover {
        background: rgba(127, 161, 116, 0.1);
        border-color: var(--sage-500);
        color: var(--sage-400);
    }

    /* Main content - CON PADDING CORRECTO */
    main.container {
        width: 100%;
        max-width: 100%;
        padding: 100px 20px 40px;
        margin: 0 auto;
    }

    /* Contenido centrado con buen espaciado */
    .main-content {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
    }

    /* Footer - CON PADDING CORRECTO */
    .footer-luxury {
        background: var(--ink);
        color: var(--sage-100);
        padding: 4rem 20px 1.5rem;
        margin-top: 5rem;
        width: 100%;
    }

    .footer-luxury .container {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0;
    }

    .footer-luxury h5 {
        color: var(--sage-500);
        font-weight: 600;
        margin-bottom: 1.5rem;
        font-size: 1.2rem;
    }

    .footer-luxury a {
        color: var(--sage-100);
        text-decoration: none;
        transition: var(--transition);
        display: block;
        margin-bottom: 0.7rem;
    }

    .footer-luxury a:hover {
        color: var(--sage-500);
        transform: translateX(5px);
    }

    .footer-luxury .social-links {
        display: flex;
        gap: 15px;
        margin-top: 1.5rem;
    }

    .footer-luxury .social-links a {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.1);
        transition: var(--transition);
    }

    .footer-luxury .social-links a:hover {
        background: var(--sage-500);
        color: var(--accent);
        transform: translateY(-3px);
    }

    .footer-luxury .footer-bottom {
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        padding-top: 1.5rem;
        margin-top: 3rem;
        text-align: center;
        color: rgba(255, 255, 255, 0.6);
    }

    /* Chat flotante */
    #sg-chat-btn {
        position: fixed;
        bottom: 30px;
        right: 30px;
        width: 52px;
        height: 52px;
        border-radius: 999px;
        background: var(--sage-600);
        color: #fff;
        border: none;
        
        display: grid;
        place-items: center;
        font-size: 1.3rem;
        box-shadow: 0 15px 30px rgba(0,0,0,.15);
        z-index: 1500;
        cursor: pointer;
        transition: transform .2s;
    }
    #sg-chat-btn:hover {
        transform: translateY(-3px);
    }
    #sg-chat-box {
        position: fixed;
        bottom: 100px;
        right: 30px;
        width: 320px;
        max-height: 460px;
        background: #fff;

        border-radius: 16px;
        box-shadow: 0 20px 40px rgba(0,0,0,.15);
        display: none;
        flex-direction: column;
        overflow: hidden;
        z-index: 1500;
    }
    #sg-chat-header {
        background: var(--sage-700);
        color: #fff;
        padding: .8rem 1rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-weight: 500;
    }
    #sg-chat-messages {
        padding: .75rem;
        flex: 1;

        overflow-y: auto;
        background: #f5f7f4;
    }
    .sg-msg-bot, .sg-msg-user {
        padding: .4rem .6rem;
        margin-bottom: .35rem;
        border-radius: 10px;
        font-size: .85rem;
        line-height: 1.35;
    }
    .sg-msg-bot {
        background: #fff;
        border: 1px solid rgba(38,69,58,.06);
    }
    .sg-msg-user {
        background: var(--sage-500);
        color: #fff;
        margin-left: auto;
        max-width: 90%;
    }
    #sg-chat-input {
        display: flex;
        gap: .4rem;
        padding: .5rem .7rem .7rem;
        border-top: 1px solid #eee;
        background: #fff;
    }
    #sg-chat-text {
        flex: 1;
        border: 1px solid #e3e7e4;
        border-radius: 999px;
        padding: .45rem .6rem;
        outline: none;
    }
    #sg-chat-send {
        background: var(--sage-600);
        border: none;
        border-radius: 999px;
        width: 38px;
        height: 38px;
        display: grid;
        place-items: center;
        color: #fff;
    }

    /* Páginas de Identity (Login/Register) */
    .identity-page {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 20px;
    }

    .identity-card {
        background: var(--surface);
        border-radius: var(--radius);
        padding: 2.5rem;
        box-shadow: var(--shadow);
        border: 1px solid rgba(127, 161, 116, 0.1);
        width: 100%;
        max-width: 450px;
        margin: 0 auto;
    }

    .identity-card h2 {
        color: var(--sage-800);
        margin-bottom: 1.5rem;
        text-align: center;
        font-size: 1.8rem;
    }

    .identity-card .form-label {
        color: var(--sage-700);
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .identity-card .form-control {
        border: 1px solid var(--sage-300);
        border-radius: 8px;
        padding: 0.75rem;
        transition: var(--transition);
    }

    .identity-card .form-control:focus {
        border-color: var(--sage-500);
        box-shadow: 0 0 0 0.2rem var(--ring);
    }

    .identity-card .btn-primary {
        background: var(--sage-600);
        border: none;
        border-radius: 8px;
        padding: 0.75rem;
        font-weight: 500;
        transition: var(--transition);
        width: 100%;
    }

    .identity-card .btn-primary:hover {
        background: var(--sage-700);
        transform: translateY(-2px);
    }

    .identity-links {
        text-align: center;
        margin-top: 1.5rem;
    }

    .identity-links a {
        color: var(--sage-600);
        text-decoration: none;
        transition: var(--transition);
    }

    .identity-links a:hover {
        color: var(--sage-700);
    }

    /* Scroll personalizado */
    ::-webkit-scrollbar { width: 8px; }
    ::-webkit-scrollbar-track { background: var(--bg); }
    ::-webkit-scrollbar-thumb { background: var(--sage-500); border-radius: 4px; }
    ::-webkit-scrollbar-thumb:hover { background: var(--sage-600); }

    @@keyframes fadeInUp {
        0% { opacity: 0; transform: translateY(30px); }
        100% { opacity: 1; transform: translateY(0); }
    }
    .fade-in-up { animation: fadeInUp .8s ease-out forwards; }

    /* RESPONSIVE FIXES */
    @@media (max-width: 768px) {
        .topbar .container {
            padding: 0 15px;
        }
        
        main.container {
            padding: 90px 15px 30px;
        }
        
        .footer-luxury {
            padding: 3rem 15px 1.5rem;
        }
        
        .brand {
            font-size: 1.3rem;
        }
        
        .brand .logo {
            width: 36px;
            height: 36px;
        }
        
        .identity-card {
            padding: 2rem;
        }
        
        #sg-chat-btn {
            bottom: 20px;
            right: 20px;
        }
        
        #sg-chat-box {
            bottom: 80px;
            right: 20px;
        }
    }

    @@media (max-width: 576px) {
        .topbar .container {
            padding: 0 12px;
        }
        
        main.container {
            padding: 80px 12px 25px;
        }
        
        .footer-luxury {
            padding: 2.5rem 12px 1.5rem;
        }
        
        .identity-card {
            padding: 1.5rem;
        }
        
        .identity-card h2 {
            font-size: 1.5rem;
        }
    }

