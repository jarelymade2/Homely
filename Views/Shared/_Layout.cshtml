@* /Views/Shared/_Layout.cshtml (Con degradado en la barra superior al estilo Admin Sidebar) *@
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] Homely</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/StayGo.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        :root {
            /* Sage palette (Mantenemos los mismos del Admin) */
            --sage-50: #f5f7f4; --sage-100: #e9efe6; --sage-200: #dce6d7; --sage-300: #c9d7c2;
            --sage-400: #a3b18a; --sage-500: #7fa174; --sage-600: #5e8a63; --sage-700: #3f6b4f;
            --sage-800: #2f5b45; --sage-900: #26453a;
            
            /* Variables semánticas ajustadas al nuevo look */
            --bg: var(--sage-50);       /* Fondo de página principal (igual que Admin) */
            --ink: #243036;             /* Color de texto principal */
            --muted: #cfe3d9;           /* Color de texto para el header (más claro) */
            --brand: #e9f3ef;           /* Color de marca para links en el header (más claro) */
            --accent: #fff;             /* Color de acento para el header (blanco) */
            --surface: #ffffff;         /* Fondo de tarjetas, etc. */
            --shadow: 0 10px 25px rgba(36,48,54,.08);
            --radius: 16px;             /* Radio de borde unificado */
            --ring: rgba(63,107,79,.35); /* Anillo de foco (accesibilidad) */
        }

        html, body {
            height: 100%;
        }

        body {
            background: var(--bg);
            color: var(--ink);
            overflow-x: hidden;
        }

        /*
         * === BARRA DE NAVEGACIÓN (TOPBAR) - AHORA CON DEGRADADO ===
         */

        .topbar {
            height: 64px;
            /* ESTA ES LA LÍNEA NUEVA (degradado horizontal hacia el centro) */
            background: linear-gradient(90deg, var(--sage-800), #1b2a23 50%, var(--sage-800));
            border-bottom: 1px solid rgba(255,255,255,.06);
            display: flex;
            align-items: center;
            padding: 0 16px;
            position: sticky;
            top: 0;
            z-index: 1031;
        }

        /* Brand (Logo de StayGo en la cabecera) */
        .brand {
            display: flex;
            align-items: center;
            gap: .5rem;
            font-weight: 700;
            letter-spacing: .2px;
            color: #e9f3ef; /* Blanco suave para el texto del logo */
            text-decoration: none;
        }

        .brand .logo {
            width: 34px;
            height: 34px;
            border-radius: 10px;
            background: linear-gradient(135deg,var(--sage-400),var(--sage-700));
            display: grid;
            place-items: center;
            color: #fff;
            box-shadow: var(--shadow);
        }

        /* Botón hamburguesa (móvil) */
        .navbar-toggler {
            border: 1px solid rgba(255,255,255,.2); /* Borde más sutil */
            background: transparent; /* Fondo transparente */
            transition: all .2s;
            color: #cfe3d9; /* Color claro para el icono */
            font-size: 1.25rem;
            padding: .25rem .6rem;
        }

        .navbar-toggler:hover {
            background: rgba(255,255,255,.08); /* Fondo sutil al pasar el mouse */
            border-color: rgba(255,255,255,.3);
            color: #fff;
        }
        .navbar-toggler:focus {
             box-shadow: 0 0 0 4px rgba(255,255,255,.3) !important; /* Anillo de foco claro */
        }

        /* Enlaces de navegación */
        .topbar .navbar-nav .nav-link {
            color: #cfe3d9; /* Texto claro para los enlaces */
            font-weight: 500;
        }

        .topbar .navbar-nav .nav-link:hover,
        .topbar .navbar-nav .nav-link:focus {
            color: #fff; /* Texto blanco al pasar el mouse */
        }
        
        /* Botones de Login/Logout en la barra */
        .topbar .navbar-nav .btn {
            --bs-btn-color: #cfe3d9; /* Color claro para los botones */
            --bs-btn-border-color: rgba(255,255,255,.3); /* Borde claro */
            --bs-btn-hover-bg: rgba(255,255,255,.1); /* Fondo sutil al pasar el mouse */
            --bs-btn-hover-border-color: rgba(255,255,255,.4);
            --bs-btn-hover-color: #fff;
            font-weight: 500;
        }

        /* Botón de "Registrarse" */
        .topbar .navbar-nav .btn-primary {
            --bs-btn-bg: var(--sage-600); /* Color verde original del admin */
            --bs-btn-border-color: var(--sage-600);
            --bs-btn-hover-bg: var(--sage-700);
            --bs-btn-hover-border-color: var(--sage-700);
            --bs-btn-color: #fff;
            --bs-btn-hover-color: #fff;
        }


        /*
         * === ESTILOS DE PÁGINAS Y COMPONENTES (Portados de tu CSS) ===
         */

        /* Hero (Homepage) */
        .hero {
            background-image: url('/images/staygo-fondo.png');
            background-size: cover;
            background-position: center;
            height: 60vh;
            position: relative;
        }

        .hero .overlay {
            background-color: rgba(0, 0, 0, 0.4);
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }

        /* Tarjeta de Búsqueda (Homepage) */
        .search-card {
            background: var(--surface);
            border-radius: var(--radius); /* Usa el radio unificado */
            box-shadow: var(--shadow); /* Usa la sombra unificada */
            padding: 16px;
            gap: 12px;
        }

        .search-grid {
            display: grid;
            grid-template-columns: 2fr 1.2fr 1.2fr 1fr 1fr auto;
            gap: 8px;
        }


        }

        .search-card .form-label {
            font-size: .8rem;
            color: var(--muted); /* Usa color muted */
            margin-bottom: 4px;
        }

        .search-card .form-control, .search-card .form-select {
            border-radius: 10px;
        }

        /* Botón de marca */
        .btn-brand {
            background: var(--sage-600); /* Color verde de la paleta Sage */
            color: #fff;
            border-radius: 12px;
            padding: .75rem 1.25rem;
            border: none;
            transition: background-color .2s;
        }

        .btn-brand:hover {
            background: var(--sage-700); /* Verde más oscuro al pasar el mouse */
            color: #fff;
        }

        /* Tarjeta de Alojamiento (card-stay) */
        .card-stay {
            border: none;
            border-radius: var(--radius); /* Usa el radio unificado */
            overflow: hidden;
            box-shadow: var(--shadow); /* Usa la sombra unificada */
            background: var(--surface);
        }

        .card-stay img {
            aspect-ratio: 4/3;
            object-fit: cover;
        }

        .card-stay .price {
            font-weight: 700;
        }

        /* Insignia */
        .badge-soft {
            background: #eef5ef; /* Verde pálido */
            color: var(--sage-700); /* Verde oscuro */
            border: 1px solid #d9e7da;
            border-radius: 999px;
            padding: .35rem .6rem;
        }

        /* Alertas (TempData) */
        .alert {
            border-radius: var(--radius); /* Usa el radio unificado */
        }

        /* Imágenes de tarjetas */
        .card-img-top, .propiedad-img {
            width: 100%;
            height: 220px;
            object-fit: cover;
        }

        .card img {
            transition: transform 0.3s ease-in-out;
        }

        .card:hover img {
            transform: scale(1.05);
        }


        /*
         * === COMPONENTES ÚTILES (Portados del Admin) ===
         */

        .page-head {
            border-radius: 18px;
            padding: 16px 18px;
            margin-bottom: 14px;
            background: radial-gradient(900px 300px at -10% -50%, var(--sage-200), transparent 45%), radial-gradient(900px 300px at 110% -50%, rgba(63,107,79,.12), transparent 55%), #fff;
            border: 1px solid #edf1ee;
            box-shadow: 0 10px 24px rgba(36,48,54,.06);
        }

        .btn-sage {
            --bs-btn-bg: var(--sage-600);
            --bs-btn-border-color: var(--sage-600);
            --bs-btn-hover-bg: var(--sage-700);
            --bs-btn-hover-border-color: var(--sage-700);
        }

        .btn-outline-sage {
            --bs-btn-color: var(--sage-700);
            --bs-btn-border-color: var(--sage-300);
            --bs-btn-hover-bg: var(--sage-100);
            --bs-btn-hover-border-color: var(--sage-500);
        }

        .filter-card {
            border-radius: 16px;
            border: 1px solid #edf1ee;
            background: #fff;
            box-shadow: 0 8px 20px rgba(36,48,54,.05);
        }

        .table thead th {
            background: linear-gradient(0deg,var(--sage-100),var(--sage-100)) !important;
            color: #2d3a34;
            border-bottom: 1px solid #e6eee8;
            text-transform: uppercase;
            font-size: .8rem;
            letter-spacing: .02em;
        }

        .thumb {
            width: 96px;
            height: 64px;
            object-fit: cover;
            border-radius: 10px;
            border: 1px solid #edf1ee;
        }

        .badge-type {
            background: #eef5ef;
            color: var(--sage-700);
            border: 1px solid #d9e7da;
        }

        .empty {
            border: 1px dashed #dfe6df;
            background: var(--sage-50);
            border-radius: 16px;
            padding: 24px;
        }


        /*
         * === FOOTER ===
         */
        .footer {
            position: static;
            width: 100%;
            line-height: normal;
            background: var(--surface); /* Fondo blanco */
            border-top: 1px solid #e9ecef; /* Borde superior */
            padding: 2.5rem 0;
            margin-top: 3rem;
            color: var(--muted);
        }

        .footer h5 {
            color: var(--ink);
            font-weight: 600;
        }

        .footer a {
            color: var(--muted);
            text-decoration: none;
        }

        .footer a:hover {
            color: var(--sage-700); /* Color verde al pasar el mouse */
            text-decoration: underline;
        }

        .footer .footer-bottom {
            border-top: 1px solid #e9ecef;
            padding-top: 1rem;
            margin-top: 1rem;
            text-align: center;
        }


        /*
         * === ACCESIBILIDAD (Focus Ring) ===
         */

        a.btn, button, .navbar-toggler { /* Cambiado de .btn-burger a .navbar-toggler */
            outline: none;
        }

        a.btn:focus-visible, button:focus-visible, .navbar-toggler:focus-visible {
            box-shadow: 0 0 0 4px var(--ring);
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body class="bg-body">
    
    <header class="topbar sticky-top">
        <div class="container">
            <nav class="navbar navbar-expand-lg w-100 p-0">
                
                <a class="brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <div class="logo"><i class="bi bi-house-heart"></i></div>
                    <span>Homely</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Alternar navegación">
                    <i class="bi bi-list"></i>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-3">
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Propiedad" asp-action="Index">Propiedades</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Contacto" asp-action="Index">Contacto</a></li>
                    </ul>

                    <ul class="navbar-nav align-items-lg-center">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Mi cuenta">
                                    <i class="bi bi-person-circle"></i> @User.Identity!.Name
                                </a>
                            </li>
                            <li class="nav-item">
                                <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
                                    <button class="btn btn-sm btn-outline-light ms-lg-2" type="submit">Salir</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link btn btn-sm btn-outline-light me-lg-2 mb-2 mb-lg-0" asp-area="Identity" asp-page="/Account/Login">Iniciar sesión</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-sm btn-primary" asp-area="Identity" asp-page="/Account/Register">Registrarse</a>
                            </li>
                        }
                    </ul>
                </div>

            </nav>
        </div>
    </header>

    @RenderSection("Hero", required: false)

    <div class="container mt-3">
        @if (TempData["ok"] is string okMsg)
        { <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            @okMsg <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div> }
        @if (TempData["Success"] is string ok2)
        { <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            @ok2 <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div> }
        @if (TempData["Error"] is string err)
        { <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            @err <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div> }
    </div>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h5><i class="bi bi-house-heart me-2"></i>StayGo</h5>
                    <p>Encuentra tu lugar perfecto entre nuestra selección exclusiva de propiedades.</p>
                </div>
                <div class="col-md-2 mb-4">
                    <h5>Enlaces</h5>
                    <ul class="list-unstyled">
                        <li><a href="/">Inicio</a></li>
                        <li><a href="/Propiedad">Propiedades</a></li>
                        <li><a href="/Contacto">Contacto</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-4">
                    <h5>Tipos</h5>
                    <ul class="list-unstyled">
                        <li><a href="#">Hoteles</a></li>
                        <li><a href="#">Casas</a></li>
                        <li><a href="#">Departamentos</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-4">
                    <h5>Contacto</h5>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-envelope me-2"></i> info@staygo.com</li>
                        <li><i class="bi bi-telephone me-2"></i> +51 123 456 789</li>
                        <li><i class="bi bi-geo-alt me-2"></i> Lima, Perú</li>
                    </ul>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2024 StayGo. Todos los derechos reservados.</p>
            </div>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @* Si tenías un site.js, asegúrate de que no tenga conflictos o lo necesites aquí *@
    @* <script src="~/js/site.js" asp-append-version="true"></script> *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>