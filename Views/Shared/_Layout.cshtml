@* /Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StayGo</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav>
            <a asp-controller="Home" asp-action="Index">Inicio</a> |
            <a asp-controller="Propiedad" asp-action="Index">Propiedades</a>
        </nav>
    </header>

    <main class="container">
        @RenderBody()  @* ⬅️ OBLIGATORIO *@
    </main>

    <footer>
        <small>&copy; @DateTime.Now.Year - StayGo</small>
    </footer>

    @RenderSection("Scripts", required: false) @* deja false si no defines la sección en todas las vistas *@
</body>
</html>
