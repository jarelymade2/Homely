@model IEnumerable<StayGo.Models.Propiedad>
@using System.Globalization
@{
    ViewData["Title"] = "Propiedades";
    var pe = new CultureInfo("es-PE");
}

<div class="container py-4">
    <h1 class="mb-4">Propiedades</h1>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            No hay propiedades disponibles en este momento.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var p in Model)
            {
                <div class="col-12 col-sm-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <!-- Imagen placeholder (puedes cambiar por la primera imagen real si quieres) -->
                        <img src="https://picsum.photos/seed/@(p.Titulo?.Replace(" ","_") ?? "prop")/600/400"
                             class="card-img-top" alt="@p.Titulo" />

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@p.Titulo</h5>
                            <p class="card-text text-muted mb-2">
                                <i class="bi bi-geo-alt"></i> @(p.Direccion?.ToString() ?? "â€”")
                            </p>
                            <p class="card-text fw-bold text-success mb-3">
                                @(p.PrecioPorNoche.HasValue
                                    ? p.PrecioPorNoche.Value.ToString("C", pe)
                                    : "Consultar")
                                <small class="text-muted">/ noche</small>
                            </p>

                            <a href="#" class="btn btn-outline-primary mt-auto">
                                Ver detalles
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Styles {
    <!-- Bootstrap Icons (ponlo en el <head> de _Layout idealmente) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
}
