@section Scripts {
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

    <script>
        // ========== GALERÍA DE IMÁGENES ==========
        let currentGalleryIndex = 0;
        let galleryImages = [];
        let currentRoomId = null;

        function initGallery() {
            // Inicializar galería vacía - se llenará cuando se abra una galería de habitación
            galleryImages = [];
        }

        function openGalleryModal(index, isRoomGallery = false) {
            currentGalleryIndex = index;
            // Solo cargar imágenes de la propiedad si no es galería de habitación
            if (!isRoomGallery) {
                currentRoomId = null;
                galleryImages = window.propertyImages || [];
                // Generar miniaturas de la propiedad
                generateThumbnails(galleryImages);
            }
            const modal = document.getElementById('galleryModal');
            modal.classList.add('active');
            updateGalleryImage();
            document.body.style.overflow = 'hidden';
        }

        function openRoomGallery(roomId) {
            currentRoomId = roomId;
            // Filtrar imágenes de la habitación específica
            const roomImages = window.roomImagesMap[roomId] || [];
            if (roomImages.length > 0) {
                galleryImages = roomImages;
                // Generar miniaturas dinámicamente
                generateThumbnails(roomImages);
                openGalleryModal(0, true); // true indica que es galería de habitación
            } else {
                alert('Esta habitación no tiene imágenes disponibles');
            }
        }

        function generateThumbnails(images) {
            const container = document.getElementById('galleryThumbnailsContainer');
            container.innerHTML = ''; // Limpiar miniaturas anteriores

            images.forEach((imgUrl, idx) => {
                const img = document.createElement('img');
                img.src = imgUrl;
                img.className = 'gallery-thumb-modal cursor-pointer';
                img.alt = 'Thumbnail';
                img.onclick = () => goToImage(idx);
                if (idx === 0) {
                    img.classList.add('active');
                }
                container.appendChild(img);
            });
        }

        function closeGalleryModal() {
            const modal = document.getElementById('galleryModal');
            modal.classList.remove('active');
            document.body.style.overflow = 'auto';
            currentRoomId = null;
        }

        function updateGalleryImage() {
            const mainImage = document.getElementById('galleryMainImage');
            const currentNum = document.getElementById('currentImageNum');
            const totalNum = document.getElementById('totalImageNum');

            mainImage.src = galleryImages[currentGalleryIndex];
            currentNum.textContent = currentGalleryIndex + 1;
            totalNum.textContent = galleryImages.length;

            // Actualizar thumbnail activo
            const thumbs = document.querySelectorAll('.gallery-thumb-modal');
            thumbs.forEach((thumb, idx) => {
                thumb.classList.remove('active');
                if (idx === currentGalleryIndex) {
                    thumb.classList.add('active');
                }
            });
        }

        function nextImage() {
            currentGalleryIndex = (currentGalleryIndex + 1) % galleryImages.length;
            updateGalleryImage();
        }

        function prevImage() {
            currentGalleryIndex = (currentGalleryIndex - 1 + galleryImages.length) % galleryImages.length;
            updateGalleryImage();
        }

        function goToImage(index) {
            currentGalleryIndex = index;
            updateGalleryImage();
        }

        // Cerrar modal con tecla ESC
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                closeGalleryModal();
            }
        });

        // Navegar con flechas del teclado
        document.addEventListener('keydown', function(event) {
            const modal = document.getElementById('galleryModal');
            if (modal.classList.contains('active')) {
                if (event.key === 'ArrowRight') {
                    nextImage();
                } else if (event.key === 'ArrowLeft') {
                    prevImage();
                }
            }
        });

        // Mapeo de imágenes de habitaciones
        window.roomImagesMap = {};

        // Imágenes de la propiedad
        window.propertyImages = [
            @{
                var imagenesList = Model?.Imagenes?.ToList() ?? new List<StayGo.Models.ImagenPropiedad>();
                var allPropImages = new List<string>();
                foreach (var img in imagenesList)
                {
                    allPropImages.Add(img.Url);
                }
                if (!string.IsNullOrEmpty(ViewBag.ImagenUnsplash))
                {
                    allPropImages.Add(ViewBag.ImagenUnsplash);
                }
                for (int i = 0; i < allPropImages.Count; i++)
                {
                    <text>'@allPropImages[i]'@(i < allPropImages.Count - 1 ? "," : "")</text>
                }
            }
        ];

        // Inicializar galería cuando carga la página
        document.addEventListener('DOMContentLoaded', function() {
            initGallery();

            // Construir mapa de imágenes de habitaciones
            @if (Model?.Habitaciones?.Any() == true)
            {
                @foreach (var room in Model.Habitaciones)
                {
                    @if (room.Imagenes?.Any() == true)
                    {
                        <text>
                        window.roomImagesMap['@room.Id'] = [
                            @{
                                var roomImages = room.Imagenes.ToList();
                                for (int i = 0; i < roomImages.Count; i++)
                                {
                                    <text>'@roomImages[i].Url'@(i < roomImages.Count - 1 ? "," : "")</text>
                                }
                            }
                        ];
                        </text>
                    }
                }
            }
        });

        // ========== MAPA ==========
        document.addEventListener("DOMContentLoaded", function () {
            var lat = @((Model?.Lat ?? -12.0464).ToString(System.Globalization.CultureInfo.InvariantCulture));
            var lng = @((Model?.Lng ?? -77.0428).ToString(System.Globalization.CultureInfo.InvariantCulture));

            var map = L.map('map').setView([lat, lng], 14);

            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                maxZoom: 19,
                attribution: '&copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> colaboradores'
            }).addTo(map);

            // Icono personalizado verde oscuro (darkgreen)
            var sageIcon = L.icon({
                iconUrl: 'https://raw.githubusercontent.com/pointhi/leaflet-color-markers/master/img/marker-icon-2x-darkgreen.png',
                shadowUrl: 'https://cdnjs.cloudflare.com/ajax/libs/leaflet/0.7.7/images/marker-shadow.png',
                iconSize: [25, 41],
                iconAnchor: [12, 41],
                popupAnchor: [1, -34],
                shadowSize: [41, 41]
            });

            L.marker([lat, lng], {icon: sageIcon}).addTo(map)
                .bindPopup("<b>@Model?.Titulo</b><br>@ubic")
                .openPopup();
        });
    </script>
}