@model StayGo.Models.Propiedad
@using System.Globalization
@using System.Security.Claims

@{
    // Configuración de la vista
    ViewData["Title"] = Model?.Titulo ?? "Propiedad";
    var cover = Model?.Imagenes?.OrderByDescending(i => i.EsPrincipal).FirstOrDefault()?.Url
                ?? "https://placehold.co/1200x360?text=Sin+imagen";
    var pe = new CultureInfo("es-PE");
    var ubic = string.Join(", ",
        new[] { Model?.Direccion?.Ciudad, Model?.Direccion?.Pais }
        .Where(s => !string.IsNullOrWhiteSpace(s)));
    var reseñas = (Model?.Resenas ?? Enumerable.Empty<StayGo.Models.Resena>()).OrderByDescending(r => r.Fecha).ToList();
    var tieneResenas = reseñas.Any();
    var promedio = tieneResenas ? reseñas.Average(r => r.Puntuacion) : 0.0;
    int promedioEntero = (int)Math.Round(promedio);
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container pt-4 pb-5">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb-sage">
            <li class="breadcrumb-item">
                <a asp-controller="Propiedad" asp-action="Index">
                    <i class="bi bi-houses-fill me-2"></i>Propiedades
                </a>
            </li>
            <li class="breadcrumb-item active">@Model?.Titulo</li>
        </ol>
    </nav>

    <div class="property-header-sage mb-5">
        <h1 class="property-title-main">@Model?.Titulo</h1>

        <div class="property-badges-group">
            <div class="location-badge-sage">
                <i class="bi bi-geo-alt-fill me-2"></i>@ubic
            </div>

            @if (Model?.PrecioPorNoche.HasValue == true)
            {
                <div class="price-badge-sage">
                    <span class="price-value">@Model!.PrecioPorNoche!.Value.ToString("C", pe)</span>
                    <span class="price-label">/ noche</span>
                </div>
            }
            else
            {
                <span class="hotel-badge-sage">
                    <i class="bi bi-building me-2"></i>Hotel - Precio por habitación
                </span>
            }

            @if (!string.IsNullOrEmpty(ViewBag.PrecioSoles?.ToString()))
            {
                <div class="converted-price-sage">
                    <i class="bi bi-currency-exchange me-2"></i>
                    @(ViewBag.PrecioSoles) <small>/ noche</small>
                </div>
            }
        </div>
    </div>

    <div class="content-card-sage mb-5 p-4 p-lg-5">
        <div class="row g-4">
            <div class="col-lg-8">
                <div class="image-wrapper-sage main-image-sage cursor-pointer" onclick="openGalleryModal(0)">
                    <img src="@cover" class="img-fluid w-100" alt="@Model?.Titulo" />
                    <div class="image-overlay-sage">
                        <span class="image-badge-sage">
                            <i class="bi bi-zoom-in me-2"></i>Haz click para ver galería
                        </span>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="gallery-thumbnails">
                    @{
                        var imagenesList = Model?.Imagenes?.ToList() ?? new List<StayGo.Models.ImagenPropiedad>();
                        var allImages = new List<string>();

                        // Agregar imágenes de la propiedad
                        foreach (var img in imagenesList)
                        {
                            allImages.Add(img.Url);
                        }

                        // Agregar imagen de Unsplash si existe
                        if (!string.IsNullOrEmpty(ViewBag.ImagenUnsplash))
                        {
                            allImages.Add(ViewBag.ImagenUnsplash);
                        }
                    }

                    @if (allImages.Any())
                    {
                        foreach (var img in allImages.Take(4))
                        {
                            var index = allImages.IndexOf(img);
                            <div class="thumbnail-wrapper cursor-pointer" onclick="openGalleryModal(@index)">
                                <img src="@img" class="img-fluid" alt="Thumbnail" />
                                <div class="thumbnail-overlay">
                                    <i class="bi bi-zoom-in"></i>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de Galería -->
    <div class="gallery-modal" id="galleryModal">
        <div class="gallery-modal-content">
            <button class="gallery-close-btn" onclick="closeGalleryModal()">&times;</button>

            <div class="gallery-main-image">
                <img id="galleryMainImage" src="" alt="Galería" />
            </div>

            <div class="gallery-controls">
                <button class="gallery-nav-btn prev" onclick="prevImage()">
                    <i class="bi bi-chevron-left"></i>
                </button>
                <span class="gallery-counter"><span id="currentImageNum">1</span> / <span id="totalImageNum">1</span></span>
                <button class="gallery-nav-btn next" onclick="nextImage()">
                    <i class="bi bi-chevron-right"></i>
                </button>
            </div>

            <div class="gallery-thumbnails-modal" id="galleryThumbnailsContainer">
                <!-- Las miniaturas se generarán dinámicamente con JavaScript -->
            </div>
        </div>
    </div>
    
    @{
        bool esHotelConHabitaciones = Model?.Tipo == StayGo.Models.TipoPropiedad.Hotel && Model?.Habitaciones?.Any() == true;
    }

    <div class="row g-4 mb-5">
        <div class="@(esHotelConHabitaciones ? "col-lg-8" : "col-lg-8")">
            <div class="content-card-sage mb-4">
                <div class="card-body p-4 p-lg-5">
                    <h3 class="section-title-sage mb-4">
                        <i class="bi bi-file-text-fill me-3"></i>Descripción de la Propiedad
                    </h3>
                    <p class="description-text-sage">
                        @Model?.Descripcion
                    </p>
                </div>
            </div>

            <div class="content-card-sage">
                <div class="card-body p-4 p-lg-5">
                    <!-- MENSAJES DE ÉXITO/ERROR -->
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h3 class="section-title-sage mb-0">
                            <i class="bi bi-star-fill me-3"></i>Experiencias de Huéspedes
                        </h3>
                        <span class="review-count-badge">@(Model?.Resenas?.Count ?? 0) Reseñas</span>
                    </div>

                    <!-- Puntuación promedio -->
                    @if (tieneResenas)
                    {
                        <div class="mb-4 p-3 bg-light rounded">
                            <span class="text-warning fs-5">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= promedioEntero)
                                    {
                                        <i class="bi bi-star-fill"></i>
                                    }
                                    else if (i == promedioEntero + 1 && promedio > promedioEntero)
                                    {
                                        <i class="bi bi-star-half"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-star"></i>
                                    }
                                }
                            </span>
                            <span class="text-muted ms-2">@promedio.ToString("F1") de 5 (@reseñas.Count @(reseñas.Count == 1 ? "reseña" : "reseñas"))</span>
                        </div>
                    }

                    @if (!tieneResenas)
                    {
                        <div class="empty-reviews-sage">
                            <i class="bi bi-chat-dots fs-1 mb-3"></i>
                            <h5>No hay reseñas aún</h5>
                            <p>Sé el primero en compartir tu experiencia en esta propiedad.</p>
                        </div>
                    }
                    else
                    {
                        <div class="reviews-list-sage">
                            @foreach (var r in reseñas)
                            {
                                <div class="review-card-sage">
                                    <div class="review-header-sage">
                                        <div>
                                            <div class="review-rating-sage mb-2">
                                                @for (int i = 0; i < r.Puntuacion; i++)
                                                {
                                                    <i class="bi bi-star-fill"></i>
                                                }
                                                @for (int i = r.Puntuacion; i < 5; i++)
                                                {
                                                    <i class="bi bi-star"></i>
                                                }
                                                <span class="rating-number">@r.Puntuacion.0/5.0</span>
                                            </div>
                                            <div class="fw-semibold">
                                                @if (r.Usuario != null)
                                                {
                                                    @r.Usuario.UserName
                                                }
                                                else
                                                {
                                                    @r.UsuarioId
                                                }
                                            </div>
                                            <span class="review-date-sage">
                                                <i class="bi bi-calendar3 me-2"></i>@r.Fecha.ToLocalTime().ToString("yyyy-MM-dd")
                                            </span>
                                        </div>
                                        <div>
                                            @{
                                                var userId = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
                                                var isAuthor = userId != null && userId == r.UsuarioId;
                                                var isAdmin = User.IsInRole("Admin");
                                            }
                                            @if (isAuthor || isAdmin)
                                            {
                                                <form asp-controller="Resena" asp-action="Delete" method="post" onsubmit="return confirm('¿Eliminar reseña?');">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@r.Id" />
                                                    <button type="submit" class="btn btn-link text-danger btn-sm p-0">
                                                        <i class="bi bi-trash"></i> Eliminar
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </div>
                                    <p class="review-text-sage mt-2">@r.Comentario</p>
                                </div>
                            }
                        </div>
                    }

                    <hr class="my-4" />

                    <!-- Formulario para dejar reseña -->
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <div class="mt-4">
                            <h5 class="mb-3"><i class="bi bi-pencil-square me-2"></i>Dejar una reseña</h5>
                            <form asp-controller="Resena" asp-action="Create" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="propiedadId" value="@Model?.Id.ToString()" />

                                <div class="mb-3">
                                    <label class="form-label">Puntuación</label>
                                    <select name="puntuacion" class="form-select" required>
                                        <option value="">Selecciona...</option>
                                        <option value="5">⭐ 5 - Excelente</option>
                                        <option value="4">⭐ 4 - Muy bueno</option>
                                        <option value="3">⭐ 3 - Aceptable</option>
                                        <option value="2">⭐ 2 - Regular</option>
                                        <option value="1">⭐ 1 - Malo</option>
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Comentario</label>
                                    <textarea name="comentario" class="form-control" rows="3" maxlength="300" placeholder="Escribe tu opinión..." required></textarea>
                                </div>

                                <button type="submit" class="btn-reserve-sage">
                                    <i class="bi bi-send-fill me-2"></i>Enviar reseña
                                </button>
                            </form>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-light mt-4">
                            <i class="bi bi-lock"></i> <strong>Inicia sesión para dejar una reseña.</strong>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- SECCIÓN DE RESERVA -->
            <div class="content-card-sage mb-4">
                <div class="card-body p-4">
                    <h5 class="sidebar-title-sage mb-4">
                        <i class="bi bi-calendar-check-fill me-2"></i>Reservar
                    </h5>

                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        @if (Model?.Tipo == StayGo.Models.TipoPropiedad.Hotel)
                        {
                            <!-- RESERVA PARA HOTEL (por habitación) -->
                            @if (Model?.Habitaciones?.Any() == true)
                            {
                                <div class="hotel-rooms-sage">
                                    @foreach (var habitacion in Model.Habitaciones)
                                    {
                                        <div class="room-card-sage mb-3">
                                            <div class="room-header-sage">
                                                <div>
                                                    <h6 class="room-name-sage">@habitacion.Nombre</h6>
                                                    <p class="room-details-sage">
                                                        <i class="bi bi-people"></i> @habitacion.Capacidad personas<br/>
                                                        @if (habitacion.TipoCama.HasValue)
                                                        {
                                                            <i class="bi bi-bed"></i> <text>@habitacion.TipoCama</text><br/>
                                                        }
                                                        @if (!string.IsNullOrEmpty(habitacion.Numero))
                                                        {
                                                            <i class="bi bi-hash"></i> <text>N° @habitacion.Numero</text>
                                                        }
                                                    </p>
                                                </div>
                                                <button type="button" class="btn-gallery-icon-sage" onclick="openRoomGallery('@habitacion.Id')" title="Ver imágenes">
                                                    <i class="bi bi-images"></i>
                                                </button>
                                            </div>
                                            <div class="room-price-sage mb-2">
                                                @habitacion.PrecioPorNoche.ToString("C", pe) <small>/ noche</small>
                                            </div>
                                            <form asp-area="" asp-controller="Pago" asp-action="Confirmar" method="get" class="mb-0">
                                                <input type="hidden" name="propiedadId" value="@Model?.Id" />
                                                <input type="hidden" name="habitacionId" value="@habitacion.Id" />
                                                <div class="mb-2">
                                                    <label class="form-label small">Check-in</label>
                                                    <input type="date" name="checkin" class="form-control form-control-sm" value="@DateTime.Today.ToString("yyyy-MM-dd")" required />
                                                </div>
                                                <div class="mb-2">
                                                    <label class="form-label small">Check-out</label>
                                                    <input type="date" name="checkout" class="form-control form-control-sm" value="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")" required />
                                                </div>
                                                <div class="mb-3">
                                                    <label class="form-label small">Huéspedes</label>
                                                    <input type="number" name="huespedes" class="form-control form-control-sm" value="1" min="1" max="@habitacion.Capacidad" />
                                                </div>
                                                <button type="submit" class="btn-reserve-sage w-100">
                                                    <i class="bi bi-credit-card me-2"></i>Reservar Habitación
                                                </button>
                                            </form>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning">
                                    <i class="bi bi-exclamation-triangle"></i> No hay habitaciones disponibles.
                                </div>
                            }
                        }
                        else
                        {
                            <!-- RESERVA PARA CASA/DEPARTAMENTO (propiedad completa) -->
                            <form asp-area="" asp-controller="Pago" asp-action="Confirmar" method="get">
                                <input type="hidden" name="propiedadId" value="@Model?.Id" />
                                <div class="mb-3">
                                    <label class="form-label">Check-in</label>
                                    <input type="date" name="checkin" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" required />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Check-out</label>
                                    <input type="date" name="checkout" class="form-control" value="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")" required />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Huéspedes</label>
                                    <input type="number" name="huespedes" class="form-control" value="1" min="1" />
                                </div>
                                <button type="submit" class="btn-reserve-sage w-100">
                                    <i class="bi bi-credit-card me-2"></i>Reservar y Pagar
                                </button>
                            </form>
                        }
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            <strong>Inicia sesión para reservar</strong>
                            <p class="mb-2 mt-2 small">Para hacer una reserva, necesitas tener una cuenta.</p>
                            <a asp-area="Identity" asp-page="/Account/Login"
                               asp-route-returnUrl="@($"/Propiedad/Details/{Model?.Id}")"
                               class="btn btn-sm btn-primary me-2">
                                <i class="bi bi-box-arrow-in-right"></i> Iniciar sesión
                            </a>
                            <a asp-area="Identity" asp-page="/Account/Register"
                               asp-route-returnUrl="@($"/Propiedad/Details/{Model?.Id}")"
                               class="btn btn-sm btn-success">
                                <i class="bi bi-person-plus"></i> Crear cuenta
                            </a>
                        </div>
                    }
                </div>
            </div>

            @if (ViewBag.Temp != null && ViewBag.Clima != null)
            {
                <div class="weather-card-sage mb-4">
                    <div class="card-body p-4">
                        <h5 class="sidebar-title-sage mb-4">
                            <i class="bi bi-cloud-sun-fill me-2"></i>Clima Actual
                        </h5>
                        <div class="weather-display-sage">
                            <div class="temperature-sage">@ViewBag.Temp°C</div>
                            <div class="weather-condition-sage">@ViewBag.Clima</div>
                        </div>
                    </div>
                </div>
            }

            <div class="location-card-sage">
                <div class="card-body p-4">
                    <h5 class="sidebar-title-sage mb-4">
                        <i class="bi bi-pin-map-fill me-2"></i>Ubicación
                    </h5>
                    <div class="coordinates-box-sage mb-4 p-3">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-geo me-2 fs-5"></i>
                            <span class="coordinate-text-sage">Coordenadas: @Model?.Lat, @Model?.Lng</span>
                        </div>
                    </div>
                    <div id="map" class="map-sage"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center">
        <a asp-controller="Propiedad" asp-action="Index" class="btn-back-sage">
            <i class="bi bi-arrow-left-circle me-2"></i>Volver a Propiedades
        </a>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <style>
        :root{
            /* Sage palette */
            --sage-50:#f5f7f4; 
            --sage-100:#e9efe6; 
            --sage-200:#dce6d7; 
            --sage-300:#c9d7c2;
            --sage-400:#a3b18a; 
            --sage-500:#7fa174; 
            --sage-600:#5e8a63; 
            --sage-700:#3f6b4f;
            --sage-800:#2f5b45; 
            --sage-900:#26453a;
            --ink:#243036; 
            --muted:#6c757d; 
            --card:#ffffff;
            --shadow: 0 8px 30px rgba(36, 48, 54, .08); 
            --shadow-lg: 0 10px 40px rgba(36, 48, 54, .12); 
            --shadow-xl: 0 15px 50px rgba(36, 48, 54, .18); 
            --shadow-button: 0 6px 20px rgba(63, 107, 79, 0.25);
            --shadow-button-hover: 0 10px 30px rgba(63, 107, 79, 0.35);
            --radius: 1.5rem; 
            --link-color: var(--sage-700);
            --link-hover: var(--sage-800);
            --title-color: var(--sage-900);
            --text-color: var(--ink);
        }

        body {
            background-color: var(--sage-50);
            font-family: 'Montserrat', sans-serif;
            color: var(--text-color);
        }

        /* ========== BREADCRUMB SAGE ========== */
        .breadcrumb-sage {
            background: transparent;
            padding: 0;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.8rem;
            list-style: none;
        }

        .breadcrumb-sage .breadcrumb-item {
            display: flex;
            align-items: center;
        }

        .breadcrumb-sage .breadcrumb-item + .breadcrumb-item::before {
            content: '›';
            padding: 0 0.8rem;
            color: var(--link-color);
            font-size: 1.3rem;
        }

        .breadcrumb-sage a {
            color: var(--link-color);
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            letter-spacing: 0.3px;
        }

        .breadcrumb-sage a:hover {
            color: var(--link-hover);
        }

        .breadcrumb-sage .active {
            color: var(--text-color);
            font-weight: 500;
        }

        /* ========== HEADER PRINCIPAL ========== */
        .property-header-sage {
            padding-top: 1rem; /* Ajustado para reducir espacio */
            padding-bottom: 2rem;
            border-bottom: 2px solid var(--sage-200);
        }

        .property-title-main {
            font-family: 'Montserrat', sans-serif;
            font-size: clamp(1.8rem, 3.5vw, 2.5rem);
            font-weight: 800;
            color: var(--title-color);
            margin-bottom: 1.5rem;
            letter-spacing: -0.5px;
            line-height: 1.3;
        }

        .property-badges-group {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            align-items: center;
        }

        .location-badge-sage {
            background: linear-gradient(135deg, var(--sage-100) 0%, var(--sage-200) 100%);
            color: var(--sage-800);
            padding: 0.8rem 1.5rem;
            border-radius: var(--radius);
            font-weight: 600;
            border-left: 4px solid var(--sage-500);
            letter-spacing: 0.3px;
        }

        .price-badge-sage {
            background: linear-gradient(135deg, var(--sage-800) 0%, var(--sage-900) 100%);
            color: var(--sage-50);
            padding: 0.8rem 1.5rem;
            border-radius: var(--radius);
            box-shadow: 0 4px 15px rgba(38, 69, 58, 0.25);
            display: flex;
            align-items: baseline;
            gap: 0.5rem;
        }

        .price-value {
            font-size: 1.5rem;
            font-weight: 800;
            font-family: 'Montserrat', sans-serif;
        }

        .price-label {
            font-size: 1rem;
            opacity: 0.9;
        }

        .hotel-badge-sage {
            background: linear-gradient(135deg, var(--sage-700) 0%, var(--sage-600) 100%);
            color: white;
            padding: 0.8rem 1.5rem;
            border-radius: var(--radius);
            font-weight: 600;
            display: inline-flex;
            align-items: center;
        }

        .converted-price-sage {
            background: white;
            border: 2px solid var(--sage-300);
            color: var(--sage-800);
            padding: 0.8rem 1.5rem;
            border-radius: var(--radius);
            font-weight: 600;
            letter-spacing: 0.3px;
        }

        /* ========== GALERÍA DE IMÁGENES (Dentro de un content-card) ========== */
        .image-wrapper-sage {
            position: relative;
            border-radius: 1rem; /* Ligeramente más pequeño para el borde interno */
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(36, 48, 54, .1); /* Sombra más suave en el interior */
            transition: all 0.4s ease;
        }
        
        /* Se quita el hover del wrapper para que no "salte" */
        .image-wrapper-sage:hover {
            transform: none;
            box-shadow: 0 6px 20px rgba(36, 48, 54, .15); 
        }

        .main-image-sage {
            height: 480px;
        }

        .secondary-image-sage {
            height: 480px;
        }

        .image-wrapper-sage img {
            height: 100%;
            object-fit: cover;
