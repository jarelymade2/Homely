@* Views/Home/Index.cshtml - CÓDIGO FINAL *@
@using System.Globalization

@{
    ViewData["Title"] = "Encuentra tu próxima estadía";

    // Recupera los filtros y el historial
    var checkin = (DateTime?)ViewBag.Checkin;
    var checkout = (DateTime?)ViewBag.Checkout;
    var adults = (int)(ViewBag.Adults ?? 1);
    var children = (int)(ViewBag.Children ?? 0);

    // 🛑 Historial de Búsqueda
    List<string> historialBusqueda = ViewBag.HistorialUbicacion ?? new List<string>();

    // Recuperamos el tipo de alerta (para color del mensaje)
    var mensajeTipo = TempData["MensajeTipo"] ?? "alert-info";

    // 🌟 Propiedad Destacada
    var propiedadDestacada = ViewBag.PropiedadDestacada as StayGo.Models.Propiedad;
    var promedioDestacada = (double?)ViewBag.PromedioDestacada;
    var pe = new CultureInfo("es-PE");
}

@section Hero{
    <section class="hero" id="heroSlider">
        <!-- Slider de imágenes -->
        <div class="hero-slider">
            <img src="/images/staygo-fondo.png" alt="StayGo Fondo" class="slider-image active" />
            <img src="/images/depa1.jpg" alt="Departamento 1" class="slider-image" />
            <img src="/images/depa2.jpg" alt="Departamento 2" class="slider-image" />
            <img src="/images/depa3.jpg" alt="Departamento 3" class="slider-image" />
        </div>
        <div class="overlay">
            <div class="container">
                
                @* Bloque para mostrar el mensaje de éxito o fracaso *@
                @if (TempData["MensajeBusqueda"] != null)
                {
                    <div class="row justify-content-center mb-4">
                        <div class="col-12 col-lg-8">
                            <div class="alert @mensajeTipo alert-dismissible fade show" role="alert">
                                @TempData["MensajeBusqueda"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        </div>
                    </div>
                }

                <div class="row gy-4 align-items-end">
                    <div class="col-12 col-lg-6 text-white">
                        <h1 class="fw-bold display-5 mb-3">Encuentra tu próxima estadía</h1>
                        <p class="lead mb-4">Explora alojamientos únicos cerca de ti o en cualquier parte del mundo.</p>
                    </div>
                    <div class="col-12">
                        @* 🛑 FORMULARIO CORREGIDO: Apunta a Home/ResultadoBusqueda *@
                        <form asp-controller="Home" asp-action="ResultadoBusqueda" method="get" class="search-card">
                            <div class="search-grid">
                                
                                @* 1. CAMPO DE UBICACIÓN (con historial) *@
                                <div>
                                    <label class="form-label">Ubicación</label>
                                    <input 
                                        name="q" 
                                        class="form-control" 
                                        placeholder="¿A dónde vas?" 
                                        list="search-history-list"
                                    />
                                    
                                    @* DATALIST CON HISTORIAL *@
                                    <datalist id="search-history-list">
                                        @foreach (var item in historialBusqueda)
                                        {
                                            <option value="@item"></option>
                                        }
                                    </datalist>
                                </div>
                                
                                @* 2. LLEGADA (Persistencia) *@
                                <div>
                                    <label class="form-label">Llegada</label>
                                    <input 
                                        type="date" 
                                        name="checkin" 
                                        class="form-control" 
                                        value="@(checkin?.ToString("yyyy-MM-dd"))"
                                    />
                                </div>
                                
                                @* 3. SALIDA (Persistencia) *@
                                <div>
                                    <label class="form-label">Salida</label>
                                    <input 
                                        type="date" 
                                        name="checkout" 
                                        class="form-control"
                                        value="@(checkout?.ToString("yyyy-MM-dd"))"
                                    />
                                </div>
                                
                                @* 4. ADULTOS (Persistencia) *@
                                <div>
                                    <label class="form-label">Adultos</label>
                                    <input 
                                        type="number" 
                                        min="1" 
                                        name="adults" 
                                        class="form-control" 
                                        value="@adults"
                                    />
                                </div>
                                
                                @* 5. NIÑOS (Persistencia) *@
                                <div>
                                    <label class="form-label">Niños</label>
                                    <input 
                                        type="number" 
                                        min="0" 
                                        name="children" 
                                        class="form-control"
                                        value="@children"
                                    />
                                </div>
                                
                                @* 6. BOTÓN BUSCAR *@
                                <div class="d-grid">
                                    <label class="form-label invisible">Buscar</label>
                                    <button class="btn btn-brand w-100" type="submit">Buscar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="mt-4 d-flex flex-wrap gap-2">
                    <span class="badge-soft">Cerca de mí</span>
                    <span class="badge-soft">Playas</span>
                    <span class="badge-soft">Pet friendly</span>
                    <span class="badge-soft">Ofertas de última hora</span>
                </div>
            </div>
        </div>
    </section>
} 

<section class="py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h4 m-0">🌟 Destacado - Mejor Valorado</h2>
        <a asp-controller="Propiedad" asp-action="Index" class="link-dark">Ver todo</a>
    </div>

    <div class="row g-4">
        @if (propiedadDestacada != null)
        {
            var imagenPrincipal = propiedadDestacada.Imagenes?.OrderByDescending(i => i.EsPrincipal).FirstOrDefault()?.Url
                                  ?? "https://placehold.co/600x400?text=Sin+imagen";
            var ubicacion = string.Join(", ",
                new[] { propiedadDestacada.Direccion?.Ciudad, propiedadDestacada.Direccion?.Pais }
                .Where(s => !string.IsNullOrWhiteSpace(s)));
            var capacidad = propiedadDestacada.Capacidad.HasValue
                ? $"{propiedadDestacada.Capacidad} huéspedes"
                : "Ver detalles";
            var precio = propiedadDestacada.PrecioPorNoche.HasValue
                ? propiedadDestacada.PrecioPorNoche.Value.ToString("C", pe)
                : "Desde habitaciones";
            var cantidadResenas = propiedadDestacada.Resenas?.Count ?? 0;

            <div class="col-12 col-sm-6 col-lg-4">
                <a asp-controller="Propiedad" asp-action="Details" asp-route-id="@propiedadDestacada.Id" class="text-decoration-none">
                    <div class="card card-stay h-100 shadow-sm">
                        <div class="position-relative">
                            <img src="@imagenPrincipal" class="card-img-top" alt="@propiedadDestacada.Titulo" style="height: 250px; object-fit: cover;" />
                            <div class="position-absolute top-0 end-0 m-2">
                                <span class="badge bg-warning text-dark">
                                    <i class="bi bi-star-fill"></i> @promedioDestacada?.ToString("F1")
                                </span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h3 class="h6 fw-semibold mb-1">@propiedadDestacada.Titulo</h3>
                            </div>
                            <p class="text-muted small mb-2">
                                <i class="bi bi-geo-alt-fill"></i> @ubicacion
                                @if (propiedadDestacada.Capacidad.HasValue)
                                {
                                    <span> · @capacidad</span>
                                }
                            </p>
                            <p class="text-muted small mb-2">
                                <i class="bi bi-chat-left-text-fill"></i> @cantidadResenas @(cantidadResenas == 1 ? "reseña" : "reseñas")
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="price fw-bold">@precio</span>
                                    @if (propiedadDestacada.PrecioPorNoche.HasValue)
                                    {
                                        <span class="text-muted small">/ noche</span>
                                    }
                                </div>
                                <span class="badge bg-success">
                                    <i class="bi bi-trophy-fill"></i> Top Rated
                                </span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No hay propiedades con reseñas aún.
                    <a asp-controller="Propiedad" asp-action="Index" class="alert-link">Ver todas las propiedades</a>
                </div>
            </div>
        }
    </div>
</section>

@section Scripts{
    <script>
        // Slider de imágenes - Cambiar cada 4 segundos
        let currentImageIndex = 0;
        const sliderImages = document.querySelectorAll('.slider-image');
        const totalImages = sliderImages.length;

        function showNextImage() {
            // Remover clase active de la imagen actual
            sliderImages[currentImageIndex].classList.remove('active');

            // Pasar a la siguiente imagen
            currentImageIndex = (currentImageIndex + 1) % totalImages;

            // Agregar clase active a la nueva imagen
            sliderImages[currentImageIndex].classList.add('active');
        }

        // Cambiar imagen cada 4 segundos (4000ms) para un efecto más profesional
        setInterval(showNextImage, 4000);
    </script>
}

@section Styles{
    <style>
        /* Estilos para el slider */
        .hero-slider {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 0;
        }

        .slider-image {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            opacity: 0;
            transition: opacity 0.5s ease-in-out;
        }

        .slider-image.active {
            opacity: 1;
        }
    </style>
}