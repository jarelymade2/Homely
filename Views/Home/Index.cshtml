            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(15px);
            border-radius: var(--radius);
            box-shadow: var(--shadow);
            padding: 30px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            transition: var(--transition);
        }

        .search-card:hover {
            background: rgba(255, 255, 255, 0.2);
            transform: translateY(-5px);
        }

        .search-grid {
            display: grid;
            grid-template-columns: 2fr 1.2fr 1.2fr 1fr 1fr auto;
            gap: 15px;
        }

        .search-card .form-label {
            font-size: .85rem;
            color: var(--sage-100);
            margin-bottom: 8px;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .search-card .form-control {
            border-radius: 12px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            padding: 12px 16px;
            background: rgba(255, 255, 255, 0.1);
            color: white;
            transition: var(--transition);
            font-weight: 400;
        }

        .search-card .form-control::placeholder {
            color: rgba(255, 255, 255, 0.6);
        }

        .search-card .form-control:focus {
            border-color: var(--sage-500);
            box-shadow: 0 0 0 0.25rem rgba(127, 161, 116, 0.25);
            background: rgba(255, 255, 255, 0.15);
            color: white;
        }

        /* Brand Button */
        .btn-brand {
            background: linear-gradient(135deg, var(--sage-500), var(--sage-700));
            color: var(--accent);
            border-radius: 12px;
            padding: 14px 24px;
            border: none;
            transition: var(--transition);
            font-weight: 600;
            letter-spacing: 0.5px;
            position: relative;
            overflow: hidden;
        }

        .btn-brand::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
            transition: 0.5s;
        }

        .btn-brand:hover::before {
            left: 100%;
        }

        .btn-brand:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(127, 161, 116, 0.4);
            color: var(--accent);
        }

        /* Quick Search Badges */
        .quick-search {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 12px;
            margin-top: 30px;
        }

        .badge-luxury {
            background: rgba(255, 255, 255, 0.1);
            color: var(--sage-100);
            border: 1px solid rgba(127, 161, 116, 0.3);
            border-radius: 30px;
            padding: 10px 20px;
            font-size: 0.9rem;
            cursor: pointer;
            transition: var(--transition);
            backdrop-filter: blur(5px);
        }

        .badge-luxury:hover {
            background: var(--sage-500);
            color: var(--accent);
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(127, 161, 116, 0.3);
        }

        /* Luxury Card Stay */
        .section-title {
            text-align: center;
            margin-bottom: 3rem;
            position: relative;
        }

        .section-title h2 {
            font-size: 2.8rem;
            color: var(--ink);
            margin-bottom: 1rem;
            display: inline-block;
        }

        .section-title h2::after {
            content: '';
            display: block;
            width: 80px;
            height: 3px;
            background: var(--sage-500);
            margin: 15px auto 0;
            border-radius: 2px;
        }

        .section-title p {
            color: var(--sage-600);
            max-width: 600px;
            margin: 0 auto;
            font-size: 1.1rem;
        }

        .card-luxury {
            border: none;
            border-radius: var(--radius);
            overflow: hidden;
            box-shadow: var(--shadow-light);
            background: var(--surface);
            transition: var(--transition);
            height: 100%;
            position: relative;
        }

        .card-luxury::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to bottom, transparent 0%, rgba(0,0,0,0.1) 100%);
            opacity: 0;
            transition: var(--transition);
            z-index: 1;
        }

        .card-luxury:hover {
            transform: translateY(-10px);
            box-shadow: var(--shadow);
        }

        .card-luxury:hover::before {
            opacity: 1;
        }

        .card-luxury img {
            aspect-ratio: 4/3;
            object-fit: cover;
            height: 240px;
            width: 100%;
            transition: var(--transition);
        }

        .card-luxury:hover img {
            transform: scale(1.05);
        }

        .card-luxury .card-body {
            padding: 1.5rem;
            position: relative;
            z-index: 2;
        }

        .card-luxury .card-body h3 {
            font-size: 1.3rem;
            margin-bottom: 0.5rem;
            color: var(--ink);
        }

        .card-luxury .rating {
