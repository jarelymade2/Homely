            background-position: center;
            background-attachment: fixed;
            min-height: 100vh;
            position: relative;
            display: flex;
            align-items: center;
            padding-top: 90px;
        }

        .hero-content {
            max-width: 800px;
            margin: 0 auto;
            text-align: center;
        }

        .hero h1 {
            font-size: 4.5rem;
            color: var(--accent);
            margin-bottom: 1.5rem;
            font-weight: 700;
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
            line-height: 1.1;
        }

        .hero p {
            font-size: 1.3rem;
            color: var(--sage-100);
            margin-bottom: 2.5rem;
            font-weight: 300;
