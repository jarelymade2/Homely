@model List<StayGo.Models.Propiedad>
@using System.Globalization

@{
    ViewData["Title"] = "Encuentra tu próxima estadía";


    var checkin = (DateTime?)ViewBag.Checkin;
    var checkout = (DateTime?)ViewBag.Checkout;
    var adults = (int)(ViewBag.Adults ?? 1);
    var children = (int)(ViewBag.Children ?? 0);


    List<string> historialBusqueda = ViewBag.HistorialUbicacion ?? new List<string>();


    var mensajeTipo = TempData["MensajeTipo"] ?? "alert-info";
   var destacadas = ViewBag.Destacadas as List<StayGo.Models.Propiedad> ?? new();
    var recomendaciones = ViewBag.Recomendaciones as List<StayGo.Models.Propiedad> ?? new();
    var propiedadDestacada = ViewBag.PropiedadDestacada as StayGo.Models.Propiedad;
    var promedioDestacada = (double?)ViewBag.PromedioDestacada;
    var pe = new CultureInfo("es-PE");
}

@section Styles {
    <style>
        /* Hero Section */
        .hero {
            background: linear-gradient(rgba(36, 48, 54, 0.7), rgba(36, 48, 54, 0.8)), 
                        url('https://images.unsplash.com/photo-1613490493576-7fde63acd811?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80');
