<!-- Hero Section -->
<section class="hero">
    <div class="container">
        <div class="hero-content fade-in-up">
            <!-- Alertas -->
            <div id="alertContainer"></div>

            @if (TempData["MensajeBusqueda"] != null)
            {
                <div class="row justify-content-center mb-4">
                    <div class="col-12 col-lg-8">
                        <div class="alert @mensajeTipo alert-luxury alert-dismissible fade show" role="alert">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-check-circle-fill me-2" style="font-size: 1.2rem;"></i>
                                <div>@Html.Raw(TempData["MensajeBusqueda"])</div>
                            </div>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    </div>
                </div>
            }

            <h1>Encuentra Tu Refugio Perfecto</h1>
            <p>Descubre propiedades exclusivas en los destinos más deseados del mundo. Donde el lujo se encuentra con la comodidad.</p>

            <form asp-controller="Home" asp-action="ResultadoBusqueda" method="get" class="search-card">
                <div class="search-grid">
                    <div>
                        <label class="form-label">Ubicación</label>
                        <input
                            name="q"
                            class="form-control"
                            placeholder="¿A dónde vas?"
                            list="search-history-list"
                            id="locationInput"
                        />
                        <datalist id="search-history-list">
                            @foreach (var item in historialBusqueda)
                            {
                                <option value="@item"></option>
                            }
                        </datalist>
                    </div>

                    <div>
                        <label class="form-label">Llegada</label>
                        <input
                            type="date"
                            name="checkin"
                            class="form-control"
                            id="checkinInput"
                            value="@(checkin?.ToString("yyyy-MM-dd"))" />
                    </div>

                    <div>
                        <label class="form-label">Salida</label>
                        <input
                            type="date"
                            name="checkout"
                            class="form-control"
                            id="checkoutInput"
                            value="@(checkout?.ToString("yyyy-MM-dd"))" />
                    </div>

                    <div>
                        <label class="form-label">Adultos</label>
                        <input
                            type="number"
                            min="1"
                            name="adults"
                            class="form-control"
                            value="@adults"
                            id="adultsInput" />
                    </div>

                    <div>
                        <label class="form-label">Niños</label>
                        <input
                            type="number"
                            min="0"
                            name="children"
                            class="form-control"
                            value="@children"
                            id="childrenInput" />
                    </div>

                    <div class="d-grid">
                        <label class="form-label invisible">Buscar</label>
                        <button class="btn btn-brand" type="submit">
                            <i class="bi bi-search me-2"></i>Buscar
                        </button>
                    </div>
                </div>
            </form>

            <div class="quick-search">
                <span class="badge-luxury" onclick="quickSearch('Playas')">Playas</span>
                <span class="badge-luxury" onclick="quickSearch('Montaña')">Montaña</span>
                <span class="badge-luxury" onclick="quickSearch('Ciudad')">Ciudad</span>
                <span class="badge-luxury" onclick="quickSearch('Pet friendly')">Pet friendly</span>
            </div>
        </div>
    </div>
</section>

<main class="container py-5">
    <!-- DESTACADAS -->
    <section class="py-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="h4 m-0">🌟 Destacadas</h2>
            <a asp-controller="Propiedad" asp-action="Index" class="link-dark">Ver todo</a>
        </div>

        <div class="row g-4">
            @if (destacadas.Any())
            {
                @foreach (var p in destacadas)
                {
                    var imagenPrincipal = p.Imagenes?.OrderByDescending(i => i.EsPrincipal).FirstOrDefault()?.Url
                                          ?? "https://placehold.co/600x400?text=Sin+imagen";
                    var ubicacion = string.Join(", ",
                        new[] { p.Direccion?.Ciudad, p.Direccion?.Pais }.Where(s => !string.IsNullOrWhiteSpace(s)));
                    var capacidad = p.Capacidad.HasValue ? $"{p.Capacidad} huéspedes" : "Ver detalles";
                    var precio = p.PrecioPorNoche.HasValue
                        ? p.PrecioPorNoche.Value.ToString("C", pe)
                        : "Desde habitaciones";
                    var cantidadResenas = p.Resenas?.Count ?? 0;
                    var promedioCalificacion = p.Resenas?.Any() == true
                        ? p.Resenas.Average(r => r.Puntuacion)
                        : 0;

                    <div class="col-12 col-sm-6 col-lg-4 col-xl-3">
                        <a asp-controller="Propiedad" asp-action="Details" asp-route-id="@p.Id" class="text-decoration-none">
                            <div class="card-luxury h-100">
                                <div class="position-relative">
                                    <img src="@imagenPrincipal" class="card-img-top" alt="@p.Titulo" />
                                    <div class="tipo-badge">
                                        @p.Tipo
                                    </div>
                                    @if (cantidadResenas > 0)
                                    {
                                        <div class="position-absolute top-0 end-0 m-2">
                                            <span class="badge bg-light text-dark">
                                                <i class="bi bi-star-fill text-warning"></i>
                                                @promedioCalificacion.ToString("F1")
                                            </span>
                                        </div>
                                    }
                                </div>
                                <div class="card-body">
                                    <h3 class="h6 fw-semibold mb-1">@p.Titulo</h3>
                                    <p class="location mb-2">
                                        <i class="bi bi-geo-alt-fill"></i> @ubicacion · @capacidad
                                    </p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <span class="price fw-bold">@precio</span>
                                            @if (p.PrecioPorNoche.HasValue)
                                            {
                                                <span class="text-muted small">/ noche</span>
                                            }
                                        </div>
                                        @if (cantidadResenas > 0)
                                        {
                                            <span class="badge bg-success-subtle text-success-emphasis">
                                                @cantidadResenas @(cantidadResenas == 1 ? "reseña" : "reseñas")
                                            </span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <div class="alert alert-info">No hay propiedades destacadas aún.</div>
                </div>
            }
        </div>
    </section>

    <!-- RECOMENDACIONES PARA TI (solo logueado y si hay) -->
    @if (User?.Identity?.IsAuthenticated ?? false)
    {
        <section class="py-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="h4 m-0">✨ Recomendaciones para ti</h2>
            </div>

            @if (recomendaciones.Any())
            {
                <div class="row g-4">
                    @foreach (var p in recomendaciones)
                    {
                        var imagenPrincipal = p.Imagenes?.OrderByDescending(i => i.EsPrincipal).FirstOrDefault()?.Url
                                              ?? "https://placehold.co/600x400?text=Sin+imagen";
                        var ubicacion = string.Join(", ",
                            new[] { p.Direccion?.Ciudad, p.Direccion?.Pais }.Where(s => !string.IsNullOrWhiteSpace(s)));
                        var capacidad = p.Capacidad.HasValue ? $"{p.Capacidad} huéspedes" : "Ver detalles";
                        var precio = p.PrecioPorNoche.HasValue
                            ? p.PrecioPorNoche.Value.ToString("C", pe)
                            : "Desde habitaciones";

                        var cantidadResenas = p.Resenas?.Count ?? 0;
                        var promedioCalificacion = p.Resenas?.Any() == true
                            ? p.Resenas.Average(r => r.Puntuacion)
                            : 0;

                        <div class="col-12 col-sm-6 col-lg-4 col-xl-3">
                            <div class="card-luxury">
                                <div class="position-relative">
                                    <img src="@imagenPrincipal" class="card-img-top" alt="@p.Titulo" />
                                    <div class="tipo-badge">
                                        @p.Tipo
                                    </div>
                                </div>
                                <div class="card-body">
                                    @if (cantidadResenas > 0)
                                    {
                                        <div class="rating">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= Math.Floor(promedioCalificacion))
                                                {
                                                    <i class="bi bi-star-fill"></i>
                                                }
                                                else if (i == Math.Ceiling(promedioCalificacion) && promedioCalificacion % 1 >= 0.5)
                                                {
                                                    <i class="bi bi-star-half"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-star"></i>
                                                }
                                            }
                                            <span class="ms-1">@promedioCalificacion.ToString("F1")</span>
                                        </div>
                                    }
                                    <h3>@p.Titulo</h3>
                                    <p class="location">
                                        <i class="bi bi-geo-alt"></i>@ubicacion · @capacidad
                                    </p>
                                    <span class="price">@precio @if (p.PrecioPorNoche.HasValue){<span>/ noche</span>}</span>
                                    <a asp-controller="Propiedad" asp-action="Details" asp-route-id="@p.Id" class="btn btn-luxury">
                                        Ver Detalles
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    Aún no podemos recomendarte propiedades. Reserva o deja reseñas para que el sistema aprenda de ti 🫶
                </div>
            }
        </section>
    }

    <!-- Experiencias (lo tuyo) -->
    <section class="py-5">
        <div class="section-title">
            <h2>Experiencias Únicas</h2>
            <p>Más que un lugar para quedarse, ofrecemos experiencias que transforman tu viaje en recuerdos inolvidables.</p>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card-luxury text-center p-4">
                    <div class="mb-3">
                        <i class="bi bi-star" style="font-size: 2.5rem; color: var(--sage-500);"></i>
                    </div>
                    <h4>Servicio Personalizado</h4>
                    <p class="text-muted">Concierge disponible 24/7 para atender todas tus necesidades durante tu estadía.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card-luxury text-center p-4">
                    <div class="mb-3">
                        <i class="bi bi-egg-fried" style="font-size: 2.5rem; color: var(--sage-500);"></i>
                    </div>
                    <h4>Gastronomía Exclusiva</h4>
                    <p class="text-muted">Chefs privados y experiencias culinarias personalizadas según tus preferencias.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card-luxury text-center p-4">
                    <div class="mb-3">
                        <i class="bi bi-geo" style="font-size: 2.5rem; color: var(--sage-500);"></i>
                    </div>
                    <h4>Guías y Actividades</h4>
                    <p class="text-muted">Tours privados y actividades exclusivas para descubrir cada destino de manera única.</p>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const today = new Date();
            const tomorrow = new Date(today);
            tomorrow.setDate(tomorrow.getDate() + 1);

            const formatDate = (date) => date.toISOString().split('T')[0];

            const checkinInput = document.getElementById('checkinInput');
            const checkoutInput = document.getElementById('checkoutInput');

            if (checkinInput && !checkinInput.value) {
                checkinInput.min = formatDate(today);
                checkinInput.value = formatDate(today);
            }

            if (checkoutInput && !checkoutInput.value) {
                checkoutInput.min = formatDate(tomorrow);
                checkoutInput.value = formatDate(tomorrow);
            }

            document.getElementById('checkinInput')?.addEventListener('change', function () {
                const checkin = new Date(this.value);
                const checkoutInput = document.getElementById('checkoutInput');
                const checkout = new Date(checkoutInput.value);

                if (checkin >= checkout) {
                    const nextDay = new Date(checkin);
                    nextDay.setDate(nextDay.getDate() + 1);
                    checkoutInput.value = nextDay.toISOString().split('T')[0];
                }

                checkoutInput.min = this.value;
            });
        });

        function quickSearch(type) {
            document.getElementById('locationInput').value = type;
        }
    </script>
