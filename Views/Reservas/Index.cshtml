@model IEnumerable<StayGo.Models.Reserva>
@using System.Globalization
@{
    ViewData["Title"] = "Reservas";
    var pe = new CultureInfo("es-PE"); // para mostrar en soles
}

<div class="container py-4">
    <h2 class="mb-4">Mis Reservas</h2>

    @if (TempData["ok"] is string ok)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @ok
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            No tienes reservas registradas.
        </div>
    }
    else
    {
        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Propiedad</th>
                    <th>Check-in</th>
                    <th>Check-out</th>
                    <th>Estado</th>
                    <th class="text-end">Precio total</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.Propiedad?.Titulo</td>
                    <td>@r.CheckIn.ToString("dd/MM/yyyy")</td>
                    <td>@r.CheckOut.ToString("dd/MM/yyyy")</td>
                    <td>
                        @if (r.Estado.ToString() == "Confirmada")
                        {
                            <span class="badge bg-success">@r.Estado</span>
                        }
                        else if (r.Estado.ToString() == "Pendiente")
                        {
                            <span class="badge bg-warning text-dark">@r.Estado</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@r.Estado</span>
                        }
                    </td>
                    <td class="text-end">@r.PrecioTotal.ToString("C", pe)</td>
                </tr>
            }
            </tbody>
        </table>
    }
</div>
