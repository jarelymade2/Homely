@model IEnumerable<StayGo.Models.Reserva>
@{
    ViewData["Title"] = "Reservas";
}

<div class="container py-4">
    <h2 class="mb-4">Reservas</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            No tienes reservas registradas.
        </div>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>Propiedad</th>
                    <th>Check-in</th>
                    <th>Check-out</th>
                    <th>Estado</th>
                    <th>Precio total</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.Propiedad?.Titulo</td>
                    <td>@r.CheckIn.ToString("dd/MM/yyyy")</td>
                    <td>@r.CheckOut.ToString("dd/MM/yyyy")</td>
                    <td>@r.Estado.ToString()</td>
                    <td>@r.PrecioTotal.ToString("C")</td>
                </tr>
            }
            </tbody>
        </table>
    }
</div>
