@using System.Globalization
@{
    ViewData["Title"] = "Pago Exitoso";
    var reserva = ViewBag.Reserva as StayGo.Models.Reserva;
    var paymentId = ViewBag.PaymentId as string;
    var pe = new CultureInfo("es-PE");
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body text-center py-5">
                    <!-- Icono de éxito -->
                    <div class="mb-4">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
                    </div>

                    <!-- Título -->
                    <h2 class="text-success mb-3">¡Pago Exitoso!</h2>
                    <p class="lead text-muted mb-4">
                        Tu reserva ha sido confirmada correctamente.
                    </p>

                    <!-- Detalles de la reserva -->
                    @if (reserva != null)
                    {
                        <div class="card bg-light mb-4">
                            <div class="card-body text-start">
                                <h5 class="card-title mb-3">
                                    <i class="bi bi-house-door"></i> Detalles de tu reserva
                                </h5>
                                
                                <div class="row mb-2">
                                    <div class="col-sm-4 fw-semibold">Propiedad:</div>
                                    <div class="col-sm-8">@reserva.Propiedad?.Titulo</div>
                                </div>

                                <div class="row mb-2">
                                    <div class="col-sm-4 fw-semibold">Check-in:</div>
                                    <div class="col-sm-8">@reserva.CheckIn.ToString("dd/MM/yyyy")</div>
                                </div>

                                <div class="row mb-2">
                                    <div class="col-sm-4 fw-semibold">Check-out:</div>
                                    <div class="col-sm-8">@reserva.CheckOut.ToString("dd/MM/yyyy")</div>
                                </div>

                                <div class="row mb-2">
                                    <div class="col-sm-4 fw-semibold">Huéspedes:</div>
                                    <div class="col-sm-8">@reserva.Huespedes</div>
                                </div>

                                <div class="row mb-2">
                                    <div class="col-sm-4 fw-semibold">Total pagado:</div>
                                    <div class="col-sm-8">
                                        <span class="text-success fw-bold">@reserva.PrecioTotal.ToString("C", pe)</span>
                                    </div>
                                </div>

                                @if (!string.IsNullOrEmpty(paymentId))
                                {
                                    <div class="row mb-2">
                                        <div class="col-sm-4 fw-semibold">ID de pago:</div>
                                        <div class="col-sm-8">
                                            <small class="text-muted">@paymentId</small>
                                        </div>
                                    </div>
                                }

                                <div class="row">
                                    <div class="col-sm-4 fw-semibold">Estado:</div>
                                    <div class="col-sm-8">
                                        <span class="badge bg-success">Confirmada</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Mensaje informativo -->
                    <div class="alert alert-info" role="alert">
                        <i class="bi bi-info-circle"></i>
                        Recibirás un correo de confirmación con todos los detalles de tu reserva.
                    </div>

                    <!-- Botones de acción -->
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a asp-controller="Reserva" asp-action="History" class="btn btn-primary btn-lg">
                            <i class="bi bi-calendar-check"></i> Ver mis reservas
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-house"></i> Volver al inicio
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

